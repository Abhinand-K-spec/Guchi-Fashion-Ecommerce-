<%- include("../partials/admin/header") %>

  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sales Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #1a1b26;
        color: #eaeaea;
      }

      .card {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
      }

      .form-control,
      .form-select {
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .form-control:focus,
      .form-select:focus {
        background-color: #2c2e3e;
        border-color: #3b82f6;
        color: #ffffff;
        box-shadow: none;
      }

      .form-control::placeholder {
        color: #9ca3af;
      }

      .btn-primary {
        background-color: #0a84ff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0066cc;
      }

      .btn-success {
        background-color: #10b981;
        border: none;
      }

      .btn-success:hover {
        background-color: #059669;
      }

      .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
      }

      .table-dark-custom {
        background-color: transparent !important;
        --bs-table-bg: transparent;
        color: #e5e7eb;
      }

      .table-dark-custom td,
      .table-dark-custom th {
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 12px 16px;
        vertical-align: middle;
        color: #e5e7eb;
      }

      .pagination .active .page-link {
        background-color: #0a84ff;
        border-color: #0a84ff;
        color: white;
      }

      .page-link {
        background-color: #2c2e3e;
        border-color: rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .page-link:hover {
        background-color: #3a3b4c;
        border-color: rgba(255, 255, 255, 0.1);
        color: #fff;
      }

      .summary-card {
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        padding: 20px;
        height: 100%;
      }

      .summary-title {
        font-size: 0.875rem;
        color: #9ca3af;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 8px;
      }

      .summary-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
      }

      #chartCanvas {
        width: 100%;
        height: 400px;
      }
    </style>
  </head>

  <body>

    <div class="container-fluid py-4">
      <div class="card mb-4">
        <div class="card-header bg-transparent border-bottom border-secondary py-3">
          <h5 class="mb-0 text-white">Sales Report</h5>
        </div>
        <div class="card-body">
          <form method="GET" action="/admin/sales" class="row g-3 align-items-end mb-4">
            <div class="col-md-3">
              <label for="period" class="form-label text-white-50 small">Filter Period</label>
              <select name="period" id="period" class="form-select" onchange="toggleDateRange(this)">
                <option value="daily" <%=period==='daily' ? 'selected' : '' %>>Daily</option>
                <option value="weekly" <%=period==='weekly' ? 'selected' : '' %>>Weekly</option>
                <option value="yearly" <%=period==='yearly' ? 'selected' : '' %>>Yearly</option>
                <option value="custom" <%=period==='custom' ? 'selected' : '' %>>Custom Date</option>
              </select>
            </div>

            <div class="col-md-6" id="dateRange" style="display: <%= period === 'custom' ? 'block' : 'none' %>;">
              <div class="row g-2">
                <div class="col-6">
                  <label class="form-label text-white-50 small">Start Date</label>
                  <input type="date" name="startDate" value="<%= startDate %>" class="form-control" />
                </div>
                <div class="col-6">
                  <label class="form-label text-white-50 small">End Date</label>
                  <input type="date" name="endDate" value="<%= endDate %>" class="form-control" />
                </div>
              </div>
            </div>

            <div class="col-md-auto d-flex gap-2">
              <button type="submit" class="btn btn-primary">Generate Report</button>
              <a href="/admin/sales/download?period=<%= period %>&range=<%= range %>&startDate=<%= startDate %>&endDate=<%= endDate %>"
                class="btn btn-outline-light">
                <i class="bi bi-file-earmark-pdf"></i> Download PDF
              </a>
              <a href="/admin/sales/download-excel?period=<%= period %>&range=<%= range %>&startDate=<%= startDate %>&endDate=<%= endDate %>"
                class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Download Excel
              </a>
            </div>
          </form>

          <% if (report && report.length> 0) { %>
            <!-- Summary Section -->
            <div class="row g-4 mb-4">
              <div class="col-md-4">
                <div class="summary-card">
                  <div class="summary-title">Overall Sales Count</div>
                  <div class="summary-value">
                    <%= overallSalesCount %>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="summary-card">
                  <div class="summary-title">Overall Order Amount</div>
                  <div class="summary-value">₹<%= overallOrderAmount.toFixed(2) %>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="summary-card">
                  <div class="summary-title">Overall Discount</div>
                  <div class="summary-value">₹<%= (overallDiscount || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Sales Table -->
            <div class="table-responsive">
              <table class="table table-dark-custom table-hover">
                <thead>
                  <tr>
                    <th class="text-uppercase small text-white-50">Order ID</th>
                    <th class="text-uppercase small text-white-50">Date</th>
                    <th class="text-uppercase small text-white-50">Customer</th>
                    <th class="text-uppercase small text-white-50">Amount</th>
                    <th class="text-uppercase small text-white-50">Discount</th>
                    <th class="text-uppercase small text-white-50">Net Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <% report.forEach(order=> { %>
                    <tr>
                      <td class="fw-bold">
                        <%= order.OrderId %>
                      </td>
                      <td>
                        <%= new Date(order.OrderDate).toLocaleDateString() %>
                      </td>
                      <td>
                        <%= order.UserId.name %>
                      </td>
                      <td>₹<%= order.TotalAmount.toFixed(2) %>
                      </td>
                      <td>₹<%= (order.Discount || 0).toFixed(2) %>
                      </td>
                      <td>₹<%= order.NetAmount.toFixed(2) %>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <nav class="mt-4">
              <ul class="pagination justify-content-center">
                <% for(let i=1; i <=totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link"
                      href="/admin/sales?period=<%= period %>&range=<%= range %>&startDate=<%= startDate %>&endDate=<%= endDate %>&page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
              </ul>
            </nav>
            <% } else { %>
              <div class="text-center py-5 text-muted">
                No sales data available for the selected period.
              </div>
              <% } %>
        </div>
      </div>

      <!-- Chart Section -->
      <!-- <div class="card">
        <div class="card-header bg-transparent border-bottom border-secondary py-3">
          <h5 class="mb-0 text-white">Sales Visualization</h5>
        </div>
        <div class="card-body">
          <canvas id="chartCanvas"></canvas>
        </div>
      </div> -->
    </div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function toggleDateRange(select) {
        const dateRange = document.getElementById('dateRange');
        if (select.value === 'custom') {
          dateRange.style.display = 'block';
        } else {
          dateRange.style.display = 'none';
        }
      }

    // Automatically generate chart if report data exists
    <% if (report && report.length > 0) { %>
        document.addEventListener('DOMContentLoaded', generateChart);
    <% } %>

        function generateChart() {
          const canvas = document.getElementById('chartCanvas');
          if (!canvas) return;

          const ctx = canvas.getContext('2d');

          if (window.salesChart) {
            window.salesChart.destroy();
          }

          // Prepare data for chart
          const labels = <% - JSON.stringify(report.map(order => order.OrderId)) %>;
          const amounts = <% - JSON.stringify(report.map(order => order.TotalAmount)) %>;
          const discounts = <% - JSON.stringify(report.map(order => (order.Discount || 0) + (order.CouponDiscount || 0))) %>;

          window.salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: labels,
              datasets: [
                {
                  label: 'Total Amount',
                  data: amounts,
                  backgroundColor: 'rgba(10, 132, 255, 0.6)',
                  borderColor: 'rgba(10, 132, 255, 1)',
                  borderWidth: 1
                },
                {
                  label: 'Total Discount',
                  data: discounts,
                  backgroundColor: 'rgba(255, 99, 132, 0.6)',
                  borderColor: 'rgba(255, 99, 132, 1)',
                  borderWidth: 1
                }
              ]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                y: {
                  beginAtZero: true,
                  grid: { color: 'rgba(255, 255, 255, 0.1)' },
                  ticks: { color: '#e5e7eb' },
                  title: {
                    display: true,
                    text: 'Amount (₹)',
                    color: '#e5e7eb'
                  }
                },
                x: {
                  grid: { display: false },
                  ticks: { color: '#e5e7eb' },
                  title: {
                    display: true,
                    text: 'Order ID',
                    color: '#e5e7eb'
                  }
                }
              },
              plugins: {
                legend: {
                  position: 'top',
                  labels: { color: '#e5e7eb' }
                },
                title: {
                  display: true,
                  text: 'Sales Overview',
                  color: '#fff'
                }
              }
            }
          });
        }
    </script>
  </body>

  </html>
  <%- include("../partials/admin/footer") %>