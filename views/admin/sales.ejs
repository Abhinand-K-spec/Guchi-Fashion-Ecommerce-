<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sales Report</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(145deg, #1c1c1e, #131314);
      color: #eaeaea;
      margin: 0;
    }

    .container {
      max-width: 1200px;
      margin: 40px auto;
      background: #212124;
      padding: 45px 50px;
      border-radius: 16px;
      box-shadow: 0 15px 45px rgba(0,0,0,0.9);
    }

    h2 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 25px;
      color: #fff;
    }

    .filter-section {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 25px;
    }

    .filter-section select, .filter-section input {
      background-color: #2c2c2e;
      color: #fff;
      border: 1px solid #3a3a3c;
      padding: 10px 14px;
      border-radius: 10px;
      font-size: 15px;
    }

    .btn-generate, .btn-download, .btn-visualize {
      background-color: #0a84ff;
      color: white;
      padding: 10px 18px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
    }

    .btn-download, .btn-visualize {
      margin-left: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      color: #f5f5f5;
    }

    th, td {
      padding: 12px;
      border: 1px solid #444;
      text-align: center;
    }

    th {
      background-color: #0a84ff;
      color: white;
      font-weight: 600;
    }

    .summary {
      color: white;
      font-weight: 200;
      margin-top: 20px;
      padding: 15px;
      background-color: #2c2c2e;
      border-radius: 10px;
    }

    .summary p {
      margin: 5px 0;
    }

    .pagination {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .pagination a {
      color: #0a84ff;
      text-decoration: none;
      padding: 8px 12px;
      background-color: #2c2c2e;
      border-radius: 10px;
    }

    .pagination a.active {
      background-color: #0a84ff;
      color: white;
    }

    #chartCanvas {
      display: none;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <%- include("../partials/admin/header") %>

  <div class="container">
    <h2>Sales Report</h2>

    <form method="GET" action="/admin/sales" class="filter-section">
      <select name="period" id="period" onchange="toggleDateRange(this)">
        <option value="daily" <%= period === 'daily' ? 'selected' : '' %>>Daily</option>
        <option value="weekly" <%= period === 'weekly' ? 'selected' : '' %>>Weekly</option>
        <option value="monthly" <%= period === 'monthly' ? 'selected' : '' %>>Monthly</option>
        <option value="custom" <%= period === 'custom' ? 'selected' : '' %>>Custom Date</option>
      </select>
      <div id="dateRange" style="display: <%= period === 'custom' ? 'block' : 'none' %>;">
        <input type="date" name="startDate" value="<%= startDate %>" />
        <input type="date" name="endDate" value="<%= endDate %>" />
      </div>
      <select name="range" id="range" style="display: <%= period === 'custom' ? 'none' : 'block' %>;">
        <option value="1day" <%= range === '1day' ? 'selected' : '' %>>1 Day</option>
        <option value="1week" <%= range === '1week' ? 'selected' : '' %>>1 Week</option>
        <option value="1month" <%= range === '1month' ? 'selected' : '' %>>1 Month</option>
      </select>
      <button type="submit" class="btn-generate">Generate Report</button>
      <a href="/admin/sales/download?period=<%= period %>&range=<%= range %>&startDate=<%= startDate %>&endDate=<%= endDate %>" class="btn-download">Download PDF</a>
      <!-- <button type="button" class="btn-visualize" onclick="generateChart()">Visualize Sales</button> -->
    </form>

    <% if (report && report.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Discount</th>
            <th>Net Amount</th>
          </tr>
        </thead>
        <tbody>
          <% report.forEach(order => { %>
            <tr>
              <td><%= order.OrderId %></td>
              <td><%= new Date(order.OrderDate).toLocaleDateString() %></td>
              <td><%= order.UserId.name %></td>
              <td>₹<%= order.TotalAmount.toFixed(2) %></td>
              <td>₹<%= (order.Discount || 0).toFixed(2) %></td>
              <td>₹<%= order.NetAmount.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="summary">
        <p><strong>Overall Sales Count:</strong> <%= overallSalesCount %></p>
        <p><strong>Overall Order Amount:</strong> ₹<%= overallOrderAmount.toFixed(2) %></p>
        <p><strong>Overall Discount:</strong> ₹<%= (overallDiscount || 0).toFixed(2) %></p>
      </div>

      <div class="pagination">
        <% for(let i = 1; i <= totalPages; i++) { %>
          <a href="/admin/sales?period=<%= period %>&range=<%= range %>&startDate=<%= startDate %>&endDate=<%= endDate %>&page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
      </div>
    <% } else { %>
      <p>No sales data available for the selected period.</p>
    <% } %>
  </div>

  <canvas id="chartCanvas"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleDateRange(select) {
      const dateRange = document.getElementById('dateRange');
      const rangeSelect = document.getElementById('range');
      if (select.value === 'custom') {
        dateRange.style.display = 'block';
        rangeSelect.style.display = 'none';
      } else {
        dateRange.style.display = 'none';
        rangeSelect.style.display = 'block';
      }
    }

    function generateChart() {
      const canvas = document.getElementById('chartCanvas');
      canvas.style.display = 'block';
      const ctx = canvas.getContext('2d');


      if (window.salesChart) {
        window.salesChart.destroy();
      }

      // Prepare data for chart
      const labels = <%= JSON.stringify(report.map(order => order.OrderId)) %>;
      const amounts = <%= JSON.stringify(report.map(order => order.TotalAmount)) %>;
      const discounts = <%= JSON.stringify(report.map(order => (order.Discount || 0) + (order.CouponDiscount || 0))) %>;

      window.salesChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [
            {
              label: 'Total Amount',
              data: amounts,
              backgroundColor: 'rgba(10, 132, 255, 0.6)',
              borderColor: 'rgba(10, 132, 255, 1)',
              borderWidth: 1
            },
            {
              label: 'Total Discount',
              data: discounts,
              backgroundColor: 'rgba(255, 99, 132, 0.6)',
              borderColor: 'rgba(255, 99, 132, 1)',
              borderWidth: 1
            }
          ]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Amount (₹)'
              }
            },
            x: {
              title: {
                display: true,
                text: 'Order ID'
              }
            }
          },
          plugins: {
            legend: { position: 'top' },
            title: { display: true, text: 'Sales Overview' }
          }
        }
      });
    }
  </script>
</body>
</html>