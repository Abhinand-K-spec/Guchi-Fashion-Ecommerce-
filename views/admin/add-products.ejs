<%- include("../partials/admin/header") %>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        background-color: #1a1b26;
        font-family: 'Inter', sans-serif;
        color: #eaeaea;
      }

      .card {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
      }

      .form-control,
      .form-select {
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .form-control:focus,
      .form-select:focus {
        background-color: #2c2e3e;
        border-color: #3b82f6;
        color: #ffffff;
        box-shadow: none;
      }

      .form-control::placeholder {
        color: #9ca3af;
      }

      .form-control-plaintext {
        color: #e5e7eb;
      }

      .btn-primary {
        background-color: #0a84ff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0066cc;
      }

      .crop-preview {
        width: 100%;
        height: 150px;
        object-fit: contain;
        border-radius: 8px;
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 10px;
      }

      .table-dark-custom {
        background-color: transparent !important;
        --bs-table-bg: transparent;
        color: #e5e7eb;
      }

      .table-dark-custom td,
      .table-dark-custom th {
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 12px 16px;
        vertical-align: middle;
        color: #e5e7eb;
      }

      .modal-content {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
      }

      .modal-header {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .modal-footer {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }

      .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
      }

      /* Checkbox & Radio */
      .form-check-input {
        background-color: #2c2e3e;
        border-color: rgba(255, 255, 255, 0.3);
      }

      .form-check-input:checked {
        background-color: #0a84ff;
        border-color: #0a84ff;
      }

      .form-check-label {
        color: #e5e7eb;
      }
    </style>
  </head>

  <body>

    <div class="container py-3">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="card shadow-lg text-white">
            <div class="card-header bg-transparent border-bottom border-secondary py-2">
              <h5 class="mb-0 text-white fs-5">Add New Product</h5>
            </div>
            <div class="card-body p-3">
              <form id="addProductForm" method="POST" action="/admin/addproduct" enctype="multipart/form-data">

                <!-- Basic Details -->
                <div class="row g-3 mb-3">
                  <div class="col-md-6">
                    <label class="form-label text-white-50 small">Product Name</label>
                    <input type="text" name="productName" class="form-control" placeholder="Enter product name">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label text-white-50 small">Category</label>
                    <select name="category" class="form-select">
                      <option value="">-- Select Category --</option>
                      <% for (let i=0; i < cat.length; i++) { %>
                        <option value="<%= cat[i].categoryName %>">
                          <%= cat[i].categoryName %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label text-white-50 small">Description</label>
                  <textarea name="description" rows="4" class="form-control"
                    placeholder="Product description..."></textarea>
                </div>

                <hr class="border-secondary my-3">

                <!-- Variants/Sizes -->
                <div class="row g-3 mb-3">
                  <div class="col-md-3">
                    <label class="form-label text-white-50 mb-2 small">Available Sizes</label>
                    <div class="d-flex flex-column gap-2">
                      <% const sizes=['S', 'M' , 'L' , 'XL' , 'XXL' ]; %>
                        <% sizes.forEach(size=> { %>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="<%= size %>" name="size[]"
                              onchange="toggleSizeRow(this)">
                            <label class="form-check-label small">
                              <%= size %>
                            </label>
                          </div>
                          <% }) %>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <label class="form-label text-white-50 mb-2 small">Variant Details</label>
                    <div class="table-responsive">
                      <table class="table table-dark-custom" id="variantTable">
                        <thead>
                          <tr class="small text-white-50">
                            <th>Size</th>
                            <th>Price (â‚¹)</th>
                            <th>Stock</th>
                          </tr>
                        </thead>
                        <tbody id="variantBody">
                          <!-- Rows added dynamically -->
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>

                <hr class="border-secondary my-3">

                <!-- Images -->
                <div class="mb-3">
                  <label class="form-label text-white-50 mb-2 small">Product Images (3 Required)</label>
                  <div class="row g-3">
                    <% for (let i=1; i <=3; i++) { %>
                      <div class="col-md-4">
                        <div class="p-2 border border-secondary rounded bg-dark-subtle">
                          <label class="form-label small text-white-50 mb-1">Image <%= i %></label>
                          <input type="file" id="img<%= i %>" accept="image/*" onchange="openModal('<%= i %>')"
                            class="form-control form-control-sm mb-2">
                          <div class="d-flex justify-content-center align-items-center bg-black rounded"
                            style="min-height: 120px;">
                            <img id="preview<%= i %>" class="img-fluid" style="max-height: 120px; display: none;" />
                            <span id="placeholder<%= i %>" class="text-white-50 small">No image selected</span>
                          </div>
                          <input type="hidden" name="croppedImage<%= i %>" id="croppedImage<%= i %>">
                        </div>
                      </div>
                      <% } %>
                  </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                  <button type="button" class="btn btn-outline-secondary me-md-2 btn-sm"
                    onclick="window.location.href='/admin/products'">Cancel</button>
                  <button class="btn btn-primary px-4 submit-btn btn-sm" type="submit">Add Product</button>
                </div>

                <% if (locals.msg && msg.length> 0) { %>
                  <div class="alert alert-danger mt-3 text-center py-2 icon-link-hover" role="alert">
                    <%= msg %>
                  </div>
                  <% } %>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Crop Modal -->
    <div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Crop Image</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="img-container" style="max-height: 500px;">
              <img id="modalImage" class="img-fluid" style="display: block; max-width: 100%;">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="applyCrop()">Crop & Save</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Axios is usually globally included or should be included here if not -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <script>
      // Universal Toast Helper (if not already global)
      function toastBody(msg, type = 'error') {
        Toastify({
          text: msg,
          duration: 3000,
          gravity: "top",
          position: "right",
          style: {
            background: type === 'success' ? "#10b981" : "#ef4444",
          }
        }).showToast();
      }

      let currentInputId, currentPreviewId, currentHiddenId, currentPlaceholderId, cropper;

      function openModal(index) {
        currentInputId = `img${index}`;
        currentPreviewId = `preview${index}`;
        currentPlaceholderId = `placeholder${index}`;
        currentHiddenId = `croppedImage${index}`;

        const fileInput = document.getElementById(currentInputId);
        const modalImage = document.getElementById('modalImage');
        const file = fileInput.files[0];

        if (file) {
          const reader = new FileReader();
          reader.onload = () => {
            modalImage.src = reader.result;
            const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
            modal.show();

            // Wait for modal transition
            document.getElementById('cropperModal').addEventListener('shown.bs.modal', () => {
              if (cropper) cropper.destroy();
              cropper = new Cropper(modalImage, {
                aspectRatio: NaN,
                viewMode: 1,
                autoCropArea: 1
              });
            }, { once: true });
          };
          reader.readAsDataURL(file);
        }
      }

      function applyCrop() {
        if (!cropper) return;

        const canvas = cropper.getCroppedCanvas({ width: 800, height: 800 });
        const preview = document.getElementById(currentPreviewId);
        const placeholder = document.getElementById(currentPlaceholderId);
        const hiddenInput = document.getElementById(currentHiddenId);

        preview.src = canvas.toDataURL('image/jpeg');
        preview.style.display = 'block';
        if (placeholder) placeholder.style.display = 'none';

        hiddenInput.value = canvas.toDataURL('image/jpeg');

        const modal = bootstrap.Modal.getInstance(document.getElementById('cropperModal'));
        modal.hide();
        cropper.destroy();
        cropper = null;
      }

      function toggleSizeRow(checkbox) {
        const size = checkbox.value;
        const tableBody = document.getElementById('variantBody');

        if (checkbox.checked) {
          const row = document.createElement('tr');
          row.setAttribute('data-size', size);
          row.innerHTML = `
          <td><input type="text" name="size[]" value="${size}" readonly class="form-control-plaintext text-center text-white"></td>
          <td><input type="number" name="price[]" class="form-control" placeholder="0.00" min="1"></td>
          <td><input type="number" name="stock[]" class="form-control" placeholder="0" min="1"></td>`;
          tableBody.appendChild(row);
        } else {
          const row = tableBody.querySelector(`tr[data-size="${size}"]`);
          if (row) row.remove();
        }
      }

      function validateForm() {
        const submitBtn = document.querySelector('.submit-btn');

        // Loading State
        if (submitBtn) {
          const originalText = submitBtn.textContent;
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';

          // Timeout to reset if stuck
          setTimeout(() => {
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
          }, 5000);
        }

        const form = document.getElementById('addProductForm');
        const productName = form.querySelector('input[name="productName"]').value.trim();
        const category = form.querySelector('select[name="category"]').value;
        const description = form.querySelector('textarea[name="description"]').value.trim();
        const variantRows = document.querySelectorAll('#variantTable tbody tr');

        let isValid = true;
        let errorMsg = '';

        if (!productName) {
          errorMsg = 'Product Name is required.';
          isValid = false;
        } else if (!/^[A-Za-z0-9\s]+$/.test(productName)) {
          errorMsg = 'Product Name should only contain letters and numbers.';
          isValid = false;
        }

        if (isValid && !category) {
          errorMsg = 'Please select a Category.';
          isValid = false;
        }

        if (isValid && !description) {
          errorMsg = 'Description is required.';
          isValid = false;
        }

        if (isValid && variantRows.length === 0) {
          errorMsg = 'Please select at least one size.';
          isValid = false;
        }

        const croppedImages = [
          document.getElementById('croppedImage1').value,
          document.getElementById('croppedImage2').value,
          document.getElementById('croppedImage3').value
        ];

        if (isValid && croppedImages.some(img => !img)) {
          errorMsg = 'All 3 images must be uploaded and cropped.';
          isValid = false;
        }

        // Check variants
        if (isValid) {
          variantRows.forEach(row => {
            const price = row.querySelector('input[name="price[]"]').value;
            const stock = row.querySelector('input[name="stock[]"]').value;
            if (!price || price <= 0) {
              errorMsg = 'All prices must be positive.';
              isValid = false;
            }
            if (!stock || stock < 0) {
              errorMsg = 'Stock cannot be negative.';
              isValid = false;
            }
          });
        }

        if (!isValid) {
          toastBody(errorMsg);
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Add Product';
          }
          return false;
        }

        return true;
      }

      function dataURLtoBlob(dataURL) {
        const arr = dataURL.split(',');
        const mime = arr[0].match(/:(.*?);/)[1];
        const bstr = atob(arr[1]);
        let n = bstr.length;
        const u8arr = new Uint8Array(n);
        while (n--) {
          u8arr[n] = bstr.charCodeAt(n);
        }
        return new Blob([u8arr], { type: mime });
      }

      document.getElementById('addProductForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        if (!validateForm()) return;

        const form = document.getElementById('addProductForm');
        const formData = new FormData();

        formData.append('productName', form.querySelector('input[name="productName"]').value);
        formData.append('category', form.querySelector('select[name="category"]').value);
        formData.append('description', form.querySelector('textarea[name="description"]').value);

        const sizes = form.querySelectorAll('input[name="size[]"]');
        const prices = form.querySelectorAll('input[name="price[]"]');
        const stocks = form.querySelectorAll('input[name="stock[]"]');

        sizes.forEach((size, i) => {
          formData.append('size[]', size.value);
          formData.append('price[]', prices[i].value);
          formData.append('stock[]', stocks[i].value);
        });

        for (let i = 1; i <= 3; i++) {
          const croppedImage = form.querySelector(`#croppedImage${i}`).value;
          const blob = dataURLtoBlob(croppedImage);
          formData.append(`image${i}`, blob, `image${i}.jpg`);
        }

        try {
          const response = await axios.post('/admin/addproduct', formData, {
            headers: { 'Content-Type': 'multipart/form-data' }
          });

          if (response.data.success) {
            toastBody('Product added successfully!', 'success');
            setTimeout(() => {
              window.location.href = '/admin/products';
            }, 1500);
          } else {
            toastBody(response.data.message || 'Failed to add product.');
            document.querySelector('.submit-btn').disabled = false;
            document.querySelector('.submit-btn').textContent = 'Add Product';
          }
        } catch (error) {
          console.error(error);
          toastBody(error.response?.data?.message || 'Server error occurred.');
          document.querySelector('.submit-btn').disabled = false;
          document.querySelector('.submit-btn').textContent = 'Add Product';
        }
      });
    </script>
  </body>

  </html>
  <%- include("../partials/admin/footer") %>