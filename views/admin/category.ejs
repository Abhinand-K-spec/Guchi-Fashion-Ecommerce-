<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Category Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <%- include("../partials/admin/header") %>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(145deg, #1c1c1e, #131314);
      color: #eaeaea;
    }

    .admin-panel {
      width: 90%;
      max-width: 1000px;
      margin: 40px auto;
      background: #212124;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 15px 45px rgba(0, 0, 0, 0.9);
    }

    h2 {
      font-weight: 700;
      font-size: 28px;
      margin-bottom: 25px;
      color: #ffffff;
    }

    input[type="text"], input[type="date"], input[type="number"], textarea, .form-control {
      width: 100%;
      background-color: #2c2c2e;
      border: 1px solid #3a3a3c;
      color: #dddddd;
      padding: 12px 15px;
      border-radius: 10px;
      font-size: 15px;
    }

    input[type="text"]::placeholder,
    input[type="date"]::placeholder,
    input[type="number"]::placeholder,
    textarea::placeholder {
      color: #999;
    }

    input[type="text"]:focus, input[type="date"]:focus, input[type="number"]:focus, textarea:focus {
      border-color: #0a84ff;
      outline: none;
      color: #fff;
    }

    textarea {
      resize: none;
    }

    .btn-primary {
      background-color: #0a84ff;
      color: white;
      padding: 10px 24px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
    }

    .btn-primary:hover {
      background-color: #0066cc;
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid #444;
      color: #aaa;
      padding: 8px 18px;
      border-radius: 8px;
      font-weight: 500;
    }

    .btn-secondary:hover {
      background-color: #2e2e2e;
    }

    .btn-outline-secondary {
      border-color: #555 !important;
      color: #ccc;
    }

    .action-btn {
      background-color: #dc2626;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
    }

    .action-btn:hover {
      background-color: #b91c1c;
    }

    table {
      width: 100%;
      margin-top: 10px;
      border-collapse: collapse;
      background-color: #1f1f1f;
      color: #e0e0e0;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #444;
    }

    th {
      background-color: #2c2c2e;
      font-weight: 600;
      color: #ffffff;
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 6px;
    }

    .pagination a {
      padding: 8px 12px;
      margin: 0 5px;
      text-decoration: none;
      border-radius: 6px;
      border: 1px solid #444;
      color: #0a84ff;
      background-color: #2e2e2e;
    }

    .pagination .active {
      background-color: #0a84ff;
      color: white;
      border-color: #0a84ff;
    }

    .error {
      color: #ff6b6b;
      font-size: 14px;
      display: none;
    }

    .d-flex {
      display: flex;
      flex-wrap: wrap;
    }

    #clearbtn {
      height: 42px;
    }

    .gap-2 {
      gap: 10px;
    }

    .offer-input {
      width: 100%;
      margin-bottom: 10px;
    }

    .offer-submit {
      padding: 6px 12px;
      font-size: 14px;
    }

    .offer-display {
      display: inline-flex;
      align-items: center;
      gap: 5px;
    }

    /* Modal styling */
    .modal-content {
      background-color: #212124;
      color: #eaeaea;
      border: 1px solid #3a3a3c;
      border-radius: 10px;
    }

    .modal-header {
      background-color: #2c2c2e;
      border-bottom: 1px solid #444;
    }

    .modal-title {
      color: #ffffff;
      font-weight: 600;
    }

    .modal-body {
      padding: 20px;
    }

    .modal-footer {
      border-top: 1px solid #444;
    }

    .btn-close {
      background-color: #444;
      opacity: 1;
    }

    .btn-close:hover {
      background-color: #555;
    }

    #offer-error {
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div id="category-data" data-cat='<%= JSON.stringify(cat.map(c => c.categoryName.toLowerCase())) %>'></div>

  <div class="admin-panel">
    <h2>Add New Category</h2>
    <form onsubmit="return handleFormSubmit(event)">
      <input type="text" name="name" placeholder="Category name" />
      <span id="name-error" class="error"></span>
      <textarea id="descriptionId" name="description" placeholder="Category description"></textarea>
      <span id="description-error" class="error"></span>
      <button type="submit" class="btn-primary">Create Category</button>
    </form>

    <h2 class="mt-5">Category Management</h2>
    <form method="GET" action="/admin/category/search" class="d-flex gap-2 mb-4">
      <input type="text" name="search" placeholder="Search categories" value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control" />
      <button type="submit" class="btn btn-primary">Search</button>
      <a id="clearbtn" href="/admin/category/clear" class="btn btn-outline-secondary">Clear</a>
    </form>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Offer</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% cat.forEach(category => { %>
          <tr>
            <td><%= category.categoryName %></td>
            <td><%= category.description %></td>
            <td><%= category.isListed ? 'Listed' : 'Unlisted' %></td>
            <td>
              <div id="offer-<%= category._id %>" class="offer-display">
                <% if (category.offer && category.offer.Discount !== undefined) { %>
                  <span><%= category.offer.Discount %>%</span>
                  <button class="action-btn btn-sm" onclick="removeOffer('<%= category._id %>', '<%= category.offer._id %>', '<%= currentPage %>')">Remove</button>
                <% } else { %>
                  <button class="btn btn-primary btn-sm offer-btn" data-bs-toggle="modal" data-bs-target="#offerModal" onclick="showOfferInput('<%= category._id %>')">Add Offer</button>
                <% } %>
              </div>
            </td>
            <td>
              <form action="/admin/<%= category.isListed ? 'unlistCategory' : 'listCategory' %>?id=<%= category._id %>&page=<%= currentPage %>" method="POST" style="display: inline;">
                <button class="action-btn btn-sm"><%= category.isListed ? 'Unlist' : 'List' %></button>
              </form>
              <form action="/admin/editCategory/<%= category._id %>?page=<%= currentPage %>" method="GET" style="display: inline;">
                <button class="btn btn-primary btn-sm">Edit</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
      <% } %>
    </div>
  </div>

  <!-- Offer Modal -->
  <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="offerModalLabel">Add Offer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <span id="offer-error" class="error"></span>
          <div id="offerFormContainer" class="offer-form">
            <!-- Form will be dynamically inserted here -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary offer-submit" id="submitOfferBtn">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const existingCategories = JSON.parse(
      document.getElementById('category-data').getAttribute('data-cat')
    );

    function handleFormSubmit(event) {
      event.preventDefault();
      if (!valid()) return false;

      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();

      fetch('/admin/addCategory', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, description })
      })
      .then(res => {
        if (!res.ok) {
          return res.json().then(err => { throw new Error(err.error); });
        }
        return res.json();
      })
      .then(() => location.reload())
      .catch(error => {
        alert(error.message || 'An error occurred');
      });
    }

    function valid() {
      clearErrorMsg();
      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();
      let isValid = true;

      if (name === '') {
        displayErrorMessage('name-error', 'Please enter a name');
        isValid = false;
      } else if (!/^[a-zA-Z\s]+$/.test(name)) {
        displayErrorMessage('name-error', 'Please enter a valid name');
        isValid = false;
      } else if (existingCategories.includes(name.toLowerCase())) {
        displayErrorMessage('name-error', 'Category already exists');
        isValid = false;
      }

      if (description === '') {
        displayErrorMessage('description-error', 'Please enter a description');
        isValid = false;
      }

      return isValid;
    }

    function displayErrorMessage(id, msg) {
      const el = document.getElementById(id);
      if (el) {
        el.innerText = msg;
        el.style.display = 'block';
      }
    }

    function clearErrorMsg() {
      ['name-error', 'description-error', 'offer-error'].forEach(id => {
        const el = document.getElementById(id);
        if (el) {
          el.innerText = '';
          el.style.display = 'none';
        }
      });
    }

    let currentCategoryId = null;
    let currentPage = '<%= currentPage %>';

    function showOfferInput(categoryId) {
      console.log('Opening modal for categoryId:', categoryId); // Debugging
      currentCategoryId = categoryId;
      const offerFormContainer = document.getElementById('offerFormContainer');
      offerFormContainer.innerHTML = `
        <input type="text" class="offer-input" id="offerName-${categoryId}" placeholder="Offer Name" />
        <input type="date" class="offer-input" id="startDate-${categoryId}" />
        <input type="date" class="offer-input" id="endDate-${categoryId}" />
        <input type="number" class="offer-input" id="discount-${categoryId}" placeholder="Discount %" min="0" max="100" />
        <input type="number" class="offer-input" id="minPrice-${categoryId}" placeholder="Min Price (optional)" min="0" />
        <input type="number" class="offer-input" id="maxPrice-${categoryId}" placeholder="Max Price (optional)" min="0" />
      `;
    }

    // Handle submit button click
    document.getElementById('submitOfferBtn').addEventListener('click', () => {
      console.log('Submit button clicked, currentCategoryId:', currentCategoryId); // Debugging
      if (!currentCategoryId) {
        displayErrorMessage('offer-error', 'No category selected.');
        return;
      }
      submitOffer(currentCategoryId, currentPage);
    });

    // Clear form on modal close
    document.getElementById('offerModal').addEventListener('hidden.bs.modal', () => {
      console.log('Modal closed, clearing form'); // Debugging
      document.getElementById('offerFormContainer').innerHTML = '';
      document.getElementById('offer-error').innerText = '';
      document.getElementById('offer-error').style.display = 'none';
      currentCategoryId = null;
    });

    function submitOffer(categoryId, page) {
      console.log('Submitting offer for categoryId:', categoryId, 'page:', page); // Debugging
      clearErrorMsg();
      const offerName = document.getElementById(`offerName-${categoryId}`)?.value.trim();
      const startDate = document.getElementById(`startDate-${categoryId}`)?.value;
      const endDate = document.getElementById(`endDate-${categoryId}`)?.value;
      const discount = document.getElementById(`discount-${categoryId}`)?.value.trim();
      const minPrice = document.getElementById(`minPrice-${categoryId}`)?.value.trim();
      const maxPrice = document.getElementById(`maxPrice-${categoryId}`)?.value.trim();

      if (!offerName || !startDate || !endDate || !discount) {
        displayErrorMessage('offer-error', 'Offer name, start date, end date, and discount are required.');
        return;
      }

      if (isNaN(discount) || discount < 0 || discount > 100) {
        displayErrorMessage('offer-error', 'Discount must be between 0 and 100.');
        return;
      }

      if (new Date(startDate) > new Date(endDate)) {
        displayErrorMessage('offer-error', 'Start date cannot be later than end date.');
        return;
      }

      if (minPrice && (isNaN(minPrice) || minPrice < 0)) {
        displayErrorMessage('offer-error', 'Minimum price must be a non-negative number.');
        return;
      }

      if (maxPrice && (isNaN(maxPrice) || maxPrice < 0)) {
        displayErrorMessage('offer-error', 'Maximum price must be a non-negative number.');
        return;
      }

      if (minPrice && maxPrice && parseFloat(minPrice) > parseFloat(maxPrice)) {
        displayErrorMessage('offer-error', 'Minimum price cannot be greater than maximum price.');
        return;
      }

      fetch(`/admin/addCategoryOffer/${categoryId}?page=${page}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          OfferName: offerName,
          StartDate: startDate,
          EndDate: endDate,
          Discount: discount,
          MinPrice: minPrice || null,
          MaxPrice: maxPrice || null
        })
      })
      .then(res => {
        console.log('Fetch response status:', res.status); // Debugging
        if (!res.ok) {
          return res.json().then(err => { throw new Error(err.error); });
        }
        const modal = bootstrap.Modal.getInstance(document.getElementById('offerModal'));
        modal.hide();
        location.reload();
      })
      .catch(error => {
        console.error('Fetch error:', error); // Debugging
        displayErrorMessage('offer-error', error.message || 'Failed to add offer');
      });
    }

    function removeOffer(categoryId, offerId, page) {
      console.log('Removing offer for categoryId:', categoryId, 'offerId:', offerId); // Debugging
      fetch(`/admin/removeCategoryOffer/${categoryId}?page=${page}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ offerId })
      })
      .then(res => {
        console.log('Remove offer response status:', res.status); // Debugging
        if (!res.ok) {
          return res.json().then(err => { throw new Error(err.error); });
        }
        location.reload();
      })
      .catch(error => {
        console.error('Remove offer error:', error); // Debugging
        alert(error.message || 'Failed to remove offer');
      });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>