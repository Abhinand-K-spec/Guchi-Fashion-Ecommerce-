<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Category Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <%- include("../partials/admin/header") %>
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #1a1b26;
        color: #eaeaea;
      }

      .card {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
      }

      .form-control,
      .form-select {
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .form-control:focus,
      .form-select:focus {
        background-color: #2c2e3e;
        border-color: #3b82f6;
        color: #ffffff;
        box-shadow: none;
      }

      .form-control::placeholder {
        color: #9ca3af;
      }

      .btn-primary {
        background-color: #0a84ff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0066cc;
      }

      .table-dark-custom {
        background-color: transparent !important;
        --bs-table-bg: transparent;
        color: #e5e7eb;
      }

      .table-dark-custom td,
      .table-dark-custom th {
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 12px 16px;
        vertical-align: middle;
        color: #e5e7eb;
      }

      .pagination .active .page-link {
        background-color: #0a84ff;
        border-color: #0a84ff;
        color: white;
      }

      .page-link {
        background-color: #2c2e3e;
        border-color: rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .page-link:hover {
        background-color: #3a3b4c;
        border-color: rgba(255, 255, 255, 0.1);
        color: #fff;
      }

      .error {
        color: #ff6b6b;
        font-size: 14px;
        display: none;
      }

      /* Modal Dark Theme */
      .modal-content {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: #fff;
      }

      .modal-header,
      .modal-footer {
        border-color: rgba(255, 255, 255, 0.08);
      }

      .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
      }
    </style>
</head>

<body>
  <div id="category-data" data-cat='<%= JSON.stringify(cat.map(c => c.categoryName.toLowerCase())) %>'></div>

  <div class="container-fluid py-4">

    <!-- Add Category Section -->
    <div class="card mb-4">
      <div class="card-header bg-transparent border-bottom border-secondary py-3">
        <h5 class="mb-0 text-white">Add New Category</h5>
      </div>
      <div class="card-body">
        <form onsubmit="return handleFormSubmit(event)">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label text-white-50 small text-uppercase fw-bold">Name</label>
              <input type="text" name="name" class="form-control" placeholder="Category name" />
              <span id="name-error" class="error"></span>
            </div>
            <div class="col-md-6">
              <label class="form-label text-white-50 small text-uppercase fw-bold">Description</label>
              <textarea id="descriptionId" name="description" class="form-control" placeholder="Category description"
                rows="1"></textarea>
              <span id="description-error" class="error"></span>
            </div>
            <div class="col-12 text-end mt-4">
              <button type="submit" class="btn btn-primary px-4">Create Category</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Management Section -->
    <div class="card">
      <div
        class="card-header bg-transparent border-bottom border-secondary py-3 d-flex flex-wrap justify-content-between align-items-center gap-3">
        <h5 class="mb-0 text-white">Category Management</h5>

        <form method="GET" action="/admin/category/search" class="d-flex gap-2">
          <input type="text" name="search" placeholder="Search categories"
            value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control form-control-sm"
            style="width: 200px;" />
          <button type="submit" class="btn btn-sm btn-outline-primary">Search</button>
          <a id="clearbtn" href="/admin/category/clear" class="btn btn-sm btn-outline-secondary">Clear</a>
        </form>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-dark-custom table-hover mb-0">
            <thead>
              <tr>
                <th class="text-uppercase small text-white-50">Name</th>
                <th class="text-uppercase small text-white-50">Description</th>
                <th class="text-uppercase small text-white-50">Status</th>
                <th class="text-uppercase small text-white-50">Offer</th>
                <th class="text-uppercase small text-white-50 text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% cat.forEach(category=> { %>
                <tr>
                  <td class="fw-bold">
                    <%= category.categoryName %>
                  </td>
                  <td class="text-truncate" style="max-width: 200px;">
                    <%= category.description %>
                  </td>
                  <td>
                    <% if(category.isListed) { %>
                      <span class="badge bg-success bg-opacity-25 text-success">Listed</span>
                      <% } else { %>
                        <span class="badge bg-danger bg-opacity-25 text-danger">Unlisted</span>
                        <% } %>
                  </td>
                  <td>
                    <div id="offer-<%= category._id %>" class="offer-display">
                      <% if (category.offer && category.offer.Discount !==undefined) { %>
                        <span class="badge bg-info bg-opacity-25 text-info me-2">
                          <%= category.offer.Discount %>% Off
                        </span>
                        <button class="btn btn-sm btn-outline-danger"
                          style="font-size: 0.75rem; padding: 0.1rem 0.4rem;"
                          onclick="removeOffer('<%= category._id %>', '<%= category.offer._id %>', '<%= currentPage %>')">Remove</button>
                        <% } else { %>
                          <button class="btn btn-sm btn-outline-primary"
                            style="font-size: 0.75rem; padding: 0.1rem 0.4rem;" data-bs-toggle="modal"
                            data-bs-target="#offerModal" onclick="showOfferInput('<%= category._id %>')">Add
                            Offer</button>
                          <% } %>
                    </div>
                  </td>
                  <td class="text-end">
                    <form
                      action="/admin/<%= category.isListed ? 'unlistCategory' : 'listCategory' %>?id=<%= category._id %>&page=<%= currentPage %>"
                      method="POST" style="display: inline;">
                      <button class="btn btn-sm <%= category.isListed ? 'btn-danger' : 'btn-success' %> me-1">
                        <%= category.isListed ? 'Unlist' : 'List' %>
                      </button>
                    </form>
                    <form action="/admin/editCategory/<%= category._id %>?page=<%= currentPage %>" method="GET"
                      style="display: inline;">
                      <button class="btn btn-sm btn-primary">Edit</button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer bg-transparent border-top border-secondary py-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mb-0">
            <% for (let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Offer Modal -->
  <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="offerModalLabel">Add Offer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <span id="offer-error" class="error"></span>
          <div id="offerFormContainer" class="offer-form d-flex flex-column gap-3">
            <!-- Form will be dynamically inserted here -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary offer-submit" id="submitOfferBtn">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const existingCategories = JSON.parse(
      document.getElementById('category-data').getAttribute('data-cat')
    );

    function handleFormSubmit(event) {
      event.preventDefault();
      if (!valid()) return false;

      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();

      fetch('/admin/addCategory', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, description })
      })
        .then(res => {
          if (!res.ok) {
            return res.json().then(err => { throw new Error(err.error); });
          }
          return res.json();
        })
        .then(() => location.reload())
        .catch(error => {
          alert(error.message || 'An error occurred');
        });
    }

    function valid() {
      clearErrorMsg();
      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();
      let isValid = true;

      if (name === '') {
        displayErrorMessage('name-error', 'Please enter a name');
        isValid = false;
      } else if (!/^[a-zA-Z\s]+$/.test(name)) {
        displayErrorMessage('name-error', 'Please enter a valid name');
        isValid = false;
      } else if (existingCategories.includes(name.toLowerCase())) {
        displayErrorMessage('name-error', 'Category already exists');
        isValid = false;
      }

      if (description === '') {
        displayErrorMessage('description-error', 'Please enter a description');
        isValid = false;
      }

      return isValid;
    }

    function displayErrorMessage(id, msg) {
      const el = document.getElementById(id);
      if (el) {
        el.innerText = msg;
        el.style.display = 'block';
      }
    }

    function clearErrorMsg() {
      ['name-error', 'description-error', 'offer-error'].forEach(id => {
        const el = document.getElementById(id);
        if (el) {
          el.innerText = '';
          el.style.display = 'none';
        }
      });
    }

    let currentCategoryId = null;
    let currentPage = '<%= currentPage %>';

    function showOfferInput(categoryId) {
      console.log('Opening modal for categoryId:', categoryId); // Debugging
      currentCategoryId = categoryId;
      const offerFormContainer = document.getElementById('offerFormContainer');
      offerFormContainer.innerHTML = `
        <div class="mb-2">
            <label class="form-label text-white-50 small">Offer Name</label>
            <input type="text" class="form-control" id="offerName-${categoryId}" placeholder="e.g. Summer Sale" />
        </div>
        <div class="mb-2">
            <label class="form-label text-white-50 small">Start Date</label>
            <input type="date" class="form-control" id="startDate-${categoryId}" />
        </div>
        <div class="mb-2">
            <label class="form-label text-white-50 small">End Date</label>
            <input type="date" class="form-control" id="endDate-${categoryId}" />
        </div>
        <div class="mb-2">
             <label class="form-label text-white-50 small">Discount %</label>
            <input type="number" class="form-control" id="discount-${categoryId}" placeholder="0-90" min="0" max="90" />
        </div>
      `;
    }

    // Handle submit button click
    document.getElementById('submitOfferBtn').addEventListener('click', () => {
      console.log('Submit button clicked, currentCategoryId:', currentCategoryId); // Debugging
      if (!currentCategoryId) {
        displayErrorMessage('offer-error', 'No category selected.');
        return;
      }
      submitOffer(currentCategoryId, currentPage);
    });

    // Clear form on modal close
    document.getElementById('offerModal').addEventListener('hidden.bs.modal', () => {
      console.log('Modal closed, clearing form'); // Debugging
      document.getElementById('offerFormContainer').innerHTML = '';
      document.getElementById('offer-error').innerText = '';
      document.getElementById('offer-error').style.display = 'none';
      currentCategoryId = null;
    });

    function submitOffer(categoryId, page) {
      console.log('Submitting offer for categoryId:', categoryId, 'page:', page); // Debugging
      clearErrorMsg();
      const offerName = document.getElementById(`offerName-${categoryId}`)?.value.trim();
      const startDate = document.getElementById(`startDate-${categoryId}`)?.value;
      const endDate = document.getElementById(`endDate-${categoryId}`)?.value;
      const discount = document.getElementById(`discount-${categoryId}`)?.value.trim();

      if (!offerName || !startDate || !endDate || !discount) {
        displayErrorMessage('offer-error', 'Offer name, start date, end date, and discount are required.');
        return;
      }

      const discountVal = parseFloat(discount);
      if (isNaN(discountVal) || discountVal < 0 || discountVal > 90) {
        displayErrorMessage('offer-error', 'Discount must be between 0 and 90.');
        return;
      }

      if (new Date(startDate) > new Date(endDate)) {
        displayErrorMessage('offer-error', 'Start date cannot be later than end date.');
        return;
      }

      fetch(`/admin/addCategoryOffer/${categoryId}?page=${page}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          OfferName: offerName,
          StartDate: startDate,
          EndDate: endDate,
          Discount: discount,
        })
      })
        .then(res => {
          console.log('Fetch response status:', res.status); // Debugging
          if (!res.ok) {
            return res.json().then(err => { throw new Error(err.error); });
          }
          const modal = bootstrap.Modal.getInstance(document.getElementById('offerModal'));
          modal.hide();
          location.reload();
        })
        .catch(error => {
          console.error('Fetch error:', error); // Debugging
          displayErrorMessage('offer-error', error.message || 'Failed to add offer');
        });
    }

    function removeOffer(categoryId, offerId, page) {
      console.log('Removing offer for categoryId:', categoryId, 'offerId:', offerId); // Debugging
      fetch(`/admin/removeCategoryOffer/${categoryId}?page=${page}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ offerId })
      })
        .then(res => {
          console.log('Remove offer response status:', res.status); // Debugging
          if (!res.ok) {
            return res.json().then(err => { throw new Error(err.error); });
          }
          location.reload();
        })
        .catch(error => {
          console.error('Remove offer error:', error); // Debugging
          alert(error.message || 'Failed to remove offer');
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>