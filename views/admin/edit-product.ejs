<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Product</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1e1e1e;
      font-family: Arial, sans-serif;
      color: #cfcfcf;
    }

    .container {
      max-width: 1000px;
      margin: 40px auto;
      background: #000;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 14px 12px rgba(0, 0, 0, 0.2);
    }

    h2 {
      margin-bottom: 25px;
      color: #ffffff;
      text-align: center;
    }

    label {
      font-weight: 600;
      color: #ffffff;
      margin-top: 15px;
    }

    input, select, textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      background-color: #3a3a3a;
      border: 1px solid #555;
      color: #ffffff;
      font-size: 14px;
    }

    .table th, .table td {
      color: #fff;
      vertical-align: middle;
      text-align: center;
    }

    .table {
      background-color: #111;
    }

    textarea {
      resize: vertical;
    }

    .image-group {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-top: 15px;
    }

    .image-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .image-box img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border: 1px solid #888;
    }

    .submit-btn {
      background-color: #007bff;
      color: white;
      padding: 12px 25px;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 30px;
      float: right;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.6);
    }

    .modal-content {
      background-color: #2a2a2a;
      margin: 8% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 500px;
      border-radius: 10px;
      text-align: center;
      color: white;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: white;
      text-decoration: none;
      cursor: pointer;
    }

    #modalImage {
      max-width: 100%;
      max-height: 400px;
    }

    .flex-container {
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
    }

    .left-section, .right-section {
      flex: 1;
      min-width: 300px;
    }

    .alert {
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      font-weight: bold;
      text-align: center;
    }

    .alert-success {
      background-color: #28a745;
      color: white;
    }

    .alert-error {
      background-color: #dc3545;
      color: white;
    }

    .spinner {
      display: none;
      border: 5px solid rgba(255, 255, 255, 0.1);
      border-top: 5px solid #007bff;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 20px auto;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body class="bg-black">
<%- include("../partials/admin/header") %>

<div class="container">
  <h2 class="text-white">Edit Product</h2>

  <% if (query.success) { %>
    <div class="alert alert-success"><%= query.success %></div>
  <% } %>
  <% if (query.error) { %>
    <div class="alert alert-error"><%= query.error %></div>
  <% } %>

  <form method="POST" action="/admin/updateProduct/<%= product._id %>" enctype="multipart/form-data" onsubmit="showSpinner()">
    <div class="flex-container">
      <div class="left-section">
        <label>Product Name</label>
        <input type="text" name="productName" value="<%= product.productName %>" required>

        <label>Category</label>
        <select name="category" required>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.categoryName %>" <%= cat._id.toString() === product.Category._id.toString() ? 'selected' : '' %>><%= cat.categoryName %></option>
          <% }) %>
        </select>

        <label>Description</label>
        <textarea name="description" rows="4" required><%= product.Description %></textarea>
      </div>

      <div class="right-section">
        <label>Variants (Size, Price, Stock)</label>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead style="background-color: #007bff;">
              <tr>
                <th>Size</th>
                <th>Price (â‚¹)</th>
                <th>Stock</th>
              </tr>
            </thead>
            <tbody>
              <% product.Variants.forEach((variant, index) => { %>
                <tr>
                  <td>
                    <input type="text" name="size[]" value="<%= variant.Size %>" class="form-control" readonly>
                  </td>
                  <td>
                    <input type="number" name="price[]" value="<%= variant.Price %>" class="form-control" required>
                  </td>
                  <td>
                    <input type="number" name="stock[]" value="<%= variant.Stock %>" class="form-control" min="0" required>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <label>Edit Product Images</label>
    <div class="image-group">
      <% for (let i = 0; i < product.Image.length; i++) { %>
        <div class="image-box">
          <img id="preview<%= i %>" src="<%= product.Image[i] %>" />
          <input type="file" id="newImage<%= i %>" name="newImage<%= i %>" accept="image/*" onchange="handleFileChange(event, <%= i %>)" />         
          <input type="hidden" name="croppedImage<%= i + 1 %>" id="croppedImage<%= i + 1 %>">
        </div>
      <% } %>
    </div>

    <div class="spinner" id="loadingSpinner"></div>
    <button type="submit" class="submit-btn">Update Product</button>
  </form>
</div>

<!-- Cropper Modal -->
<div id="cropperModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <img id="modalImage">
    <button onclick="applyCrop()" class="submit-btn" style="margin-top: 15px;">Crop & Save</button>
  </div>
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<script>
  let currentIndex = null;
  let cropper = null;

  function handleFileChange(event, index) {
    const file = event.target.files[0];
    if (!file) return;

    currentIndex = index;

    const reader = new FileReader();
    reader.onload = function(e) {
      const modalImage = document.getElementById('modalImage');
      modalImage.src = e.target.result;
      document.getElementById('cropperModal').style.display = 'block';

      if (cropper) cropper.destroy();
      cropper = new Cropper(modalImage, {
        aspectRatio: NaN,
        viewMode: 1,
        autoCropArea: 1
      });
    };
    reader.readAsDataURL(file);
  }

  function applyCrop() {
    const canvas = cropper.getCroppedCanvas({ width: 800, height: 800 });
    if (!canvas) return;

    const base64 = canvas.toDataURL('image/jpeg');
    document.getElementById(`preview${currentIndex}`).src = base64;
    document.getElementById(`croppedImage${currentIndex + 1}`).value = base64;

    closeModal();
  }

  function closeModal() {
    document.getElementById('cropperModal').style.display = 'none';
    if (cropper) {
      cropper.destroy();
      cropper = null;
    }
  }

  function showSpinner() {
    document.getElementById('loadingSpinner').style.display = 'block';
  }
</script>

</body>
</html>
