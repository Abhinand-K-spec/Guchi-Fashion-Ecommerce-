<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Product</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #424344;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 1000px;
      background: #000;
      padding: 30prgb(105, 102, 102) border-radius: 8px;
      box-shadow: 0 14px 12px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin-bottom: 25px;
      color: #222;
      text-align: center;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;
    }

    label {
      margin-bottom: 6px;
      font-weight: 600;
    }

    input,
    select,
    textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #000;
      font-size: 14px;
    }

    textarea {
      resize: vertical;
    }

    .image-group {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-top: 15px;
    }

    .image-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .image-box img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border: 1px solid #000;
    }

    .submit-btn {
      background-color: #2563eb;
      color: white;
      padding: 12px 25px;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 30px;
      float: right;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.6);
    }

    .modal-content {
      background-color: #000;
      margin: 8% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 500px;
      border-radius: 10px;
      text-align: center;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    #modalImage {
      max-width: 100%;
      max-height: 400px;
    }

    .form-container-pd {
      padding-top: 10vh;
    }
  </style>
</head>
<%- include("../partials/admin/header") %>

  <body>


    <div class="container">
      <div class="form-container-pd">
        <form method="POST" action="/admin/updateProduct/<%= product._id %>" enctype="multipart/form-data">
          <div class="form-grid">
            <div class="form-group">
              <label class="text-white">Product Name</label>
              <input class="form-control bg-dark text-white border-secondary" type="text" name="productName"
                value="<%= product.productName %>">
            </div>

            <div class="form-group">
              <label class="text-white">Category</label>
              <select class="form-select bg-dark text-white border-secondary rounded-3 shadow-sm" name="category">
                <% categories.forEach(cat=> { %>
                  <option value="<%= cat.categoryName %>" <%=cat._id.toString()===product.Category._id.toString()
                    ? 'selected' : '' %>><%= cat.categoryName %>
                  </option>
                  <% }) %>
              </select>
            </div>

            <!-- Size Dropdown -->
            <div class="form-group">
              <label class="text-white">Size</label>
              <select name="size" class="form-select bg-dark text-white border-secondary" id="sizeSelect"
                class="form-control" onchange="updateVariantFields()">
                <% if (product.Variants && product.Variants.length> 0) { %>
                  <% const seenSizes=new Set(); %>
                    <% product.Variants.forEach(variant=> { %>
                      <% if (variant.Size && !seenSizes.has(variant.Size)) { %>
                        <% seenSizes.add(variant.Size); %>
                          <option value="<%= variant.Size %>" <%=variant.Size===(product.selectedVariant?.Size ||
                            product.Variants[0].Size) ? 'selected' : '' %>>
                            <%= variant.Size %>
                          </option>
                          <% } %>
                            <% }) %>
                              <% } else { %>
                                <option disabled>No sizes available</option>
                                <% } %>
              </select>
            </div>

            <!-- Price -->
            <div class="form-group">
              <label class="text-white">Price</label>
              <input class="form-control bg-dark text-white border-secondary" type="number" id="priceInput" name="price"
                value="<%= product.selectedVariant?.Price || product.Variants[0]?.Price %>">
            </div>

            <!-- Stock -->
            <div class="form-group">
              <label class="text-white">Quantity</label>
              <input class="form-control bg-dark text-white border-secondary" type="number" id="stockInput" name="stock"
                value="<%= product.selectedVariant?.Stock || product.Variants[0]?.Stock %>" min="0">
            </div>
          </div>

          <div class="form-group">
            <label class="text-white">Description</label>
            <textarea name="description" rows="4" class="form-control bg-dark text-white border-secondary"
              required><%= product.Description %></textarea>
          </div>

          <div class="form-group">
            <label class="text-white">Edit Product Images</label>
            <div class="image-group">
              <% for (let i=0; i < product.Image.length; i++) { %>
                <div class="image-box">
                  <img id="preview<%= i %>" src="<%= product.Image[i] %>" />
                  <input type="file" id="newImage<%- i %>" name="newImage<%- i %>" accept="image/*"
                    onchange="handleFileChange(event, <%- i %>)" />
                  <input type="hidden" name="croppedImage<%= i + 1 %>" id="croppedImage<%= i + 1 %>">
                </div>
                <% } %>
            </div>
          </div>

          <button type="submit" class="submit-btn">Update Product</button>
        </form>
      </div>
    </div>

    <!-- Modal -->
    <div id="cropperModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <img id="modalImage">
        <button onclick="applyCrop()" class="submit-btn" style="margin-top: 15px;">Crop & Save</button>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <script>
      let currentIndex = null;
      let cropper = null;

      // --- Cropper ---
      function handleFileChange(event, index) {
        const file = event.target.files[0];
        if (!file) return;

        currentIndex = index;

        const reader = new FileReader();
        reader.onload = function (e) {
          const modalImage = document.getElementById('modalImage');
          modalImage.src = e.target.result;
          document.getElementById('cropperModal').style.display = 'block';

          if (cropper) cropper.destroy();
          cropper = new Cropper(modalImage, {
            aspectRatio: NaN,
            viewMode: 1,
            autoCropArea: 1
          });
        };
        reader.readAsDataURL(file);
      }

      function applyCrop() {
        const canvas = cropper.getCroppedCanvas({ width: 800, height: 800 });
        if (!canvas) return;

        const base64 = canvas.toDataURL('image/jpeg');
        document.getElementById(`preview${currentIndex}`).src = base64;
        document.getElementById(`croppedImage${currentIndex + 1}`).value = base64;

        closeModal();
      }

      function closeModal() {
        document.getElementById('cropperModal').style.display = 'none';
        if (cropper) {
          cropper.destroy();
          cropper = null;
        }
      }


      const variants = <%- JSON.stringify(product.Variants || []) %>;
      console.log('Loaded Variants:', variants);

      const sizeSelect = document.getElementById('sizeSelect');
      const priceInput = document.getElementById('priceInput');
      const stockInput = document.getElementById('stockInput');
      const productId = '<%= product._id.toString() %>';

      // Use product-specific key for localStorage
      const storageKey = `selectedSize_${productId}`;

      // Delay restoration to ensure DOM is ready and override browser defaults
      setTimeout(() => {
        const lastSize = localStorage.getItem(storageKey);
        console.log('Last Size from Storage:', lastSize);

        if (lastSize) {
          const matchingVariant = variants.find(v => v.Size && v.Size.trim() === lastSize.trim());
          if (matchingVariant) {
            console.log('Restoring size:', lastSize);
            sizeSelect.value = matchingVariant.Size;
            updateVariantFields();
          }
        }
      }, 100);

      function updateVariantFields() {
        const selectedSize = sizeSelect.value;
        console.log('Selected Size:', selectedSize);

        const selectedVariant = variants.find(v => v.Size && v.Size.trim() === selectedSize.trim());
        console.log('Selected Variant:', selectedVariant);

        if (selectedVariant) {
          priceInput.value = selectedVariant.Price;
          stockInput.value = selectedVariant.Stock;
        }

        if (selectedSize) {
          localStorage.setItem(storageKey, selectedSize);
        }
      }

      // Add loading indicator to form submission
      const form = document.querySelector('form');
      const submitBtn = document.querySelector('.submit-btn[type="submit"]');

      form.addEventListener('submit', function (e) {
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Updating...';
        }
      });
    </script>

  </body>

</html>