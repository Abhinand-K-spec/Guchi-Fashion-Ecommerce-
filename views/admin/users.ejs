<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Customer Management</title>
  <%- include("../partials/admin/header") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #1a1b26;
        color: #eaeaea;
      }

      .card {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
      }

      .form-control {
        background-color: #2c2e3e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .form-control:focus {
        background-color: #2c2e3e;
        border-color: #3b82f6;
        color: #ffffff;
        box-shadow: none;
      }

      .form-control::placeholder {
        color: #9ca3af;
      }

      .btn-primary {
        background-color: #0a84ff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0066cc;
      }

      .table-dark-custom {
        background-color: transparent !important;
        --bs-table-bg: transparent;
        color: #e5e7eb;
      }

      .table-dark-custom td,
      .table-dark-custom th {
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 12px 16px;
        vertical-align: middle;
        color: #e5e7eb;
      }

      .pagination .active .page-link {
        background-color: #0a84ff;
        border-color: #0a84ff;
        color: white;
      }

      .page-link {
        background-color: #2c2e3e;
        border-color: rgba(255, 255, 255, 0.1);
        color: #e5e7eb;
      }

      .page-link:hover {
        background-color: #3a3b4c;
        border-color: rgba(255, 255, 255, 0.1);
        color: #fff;
      }

      /* Modal Dark Theme */
      .modal-content {
        background-color: #242531;
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: #fff;
      }

      .modal-header,
      .modal-footer {
        border-color: rgba(255, 255, 255, 0.08);
      }

      .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
      }

      .block-button {
        background-color: #e11d48;
        /* Red for block */
        color: white;
        border: none;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        font-size: 0.875rem;
        display: inline-block;
      }

      .block-button:hover {
        background-color: #be123c;
        color: white;
      }

      .unblock-button {
        background-color: #10b981;
        /* Green for unblock */
        color: white;
        border: none;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        font-size: 0.875rem;
        display: inline-block;
      }

      .unblock-button:hover {
        background-color: #059669;
        color: white;
      }
    </style>
</head>

<body>

  <div class="container-fluid py-4">
    <div class="card">
      <div
        class="card-header bg-transparent border-bottom border-secondary py-3 d-flex flex-wrap justify-content-between align-items-center gap-3">
        <h5 class="mb-0 text-white">Customer Management</h5>

        <form method="GET" action="/admin/users" class="d-flex gap-2">
          <input type="text" name="search" placeholder="Search users"
            value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control form-control-sm"
            style="width: 200px;" />
          <button type="submit" class="btn btn-sm btn-primary">Search</button>
          <a id="clearbtn" href="/admin/costumer/clear" class="btn btn-sm btn-outline-secondary">Clear</a>
        </form>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-dark-custom table-hover mb-0">
            <thead>
              <tr>
                <th class="text-uppercase small text-white-50">Name</th>
                <th class="text-uppercase small text-white-50">Email</th>
                <th class="text-uppercase small text-white-50">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < data.length; i++) { %>
                <tr>
                  <td class="fw-bold">
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].email %>
                  </td>
                  <td>
                    <% if(data[i].isBlocked===false) { %>
                      <a href="/admin/blockCostumer?id=<%= data[i]._id %>" class="block-button action-link">Block</a>
                      <% } else { %>
                        <a href="/admin/unblockCostumer?id=<%= data[i]._id %>"
                          class="unblock-button action-link">Unblock</a>
                        <% } %>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer bg-transparent border-top border-secondary py-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mb-0">
            <% for(let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Block/Unblock Confirmation Modal (Optional if preserving exact existing behavior, but existing code didn't actually use the modal in the loop, it used direct links. The script below intercepts links.) -->
  <!-- Keeping the modal structure just in case, though the script handles the interception -->
  <div class="modal fade" id="confirmActionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmActionTitle">Confirm Action</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="confirmActionMessage">
          Are you sure?
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button id="confirmActionBtn" class="btn btn-danger">Yes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Axios and Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const alertContainer = document.createElement('div');
      alertContainer.className = 'alert-container';
      alertContainer.style.position = 'fixed';
      alertContainer.style.top = '20px';
      alertContainer.style.right = '20px';
      alertContainer.style.zIndex = '1000';
      alertContainer.style.maxWidth = '400px';
      document.body.appendChild(alertContainer);

      // Function to show Bootstrap alerts
      function showAlert(type, message) {
        const alertHtml = `
          <div class="alert alert-${type} alert-dismissible fade show" role="alert">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        `;
        alertContainer.insertAdjacentHTML('beforeend', alertHtml);
        setTimeout(() => {
          const alert = alertContainer.querySelector('.alert');
          if (alert) {
            alert.classList.add('fade');
            setTimeout(() => alert.remove(), 500);
          }
        }, 3000);
      }

      // Handle block/unblock button clicks
      // Note: Selector updated to match new class usage (.action-link) to avoid confusion with old .block-button nesting
      document.querySelectorAll('.action-link').forEach(link => {
        link.addEventListener('click', async (e) => {
          e.preventDefault();
          const url = link.getAttribute('href');
          const userId = new URLSearchParams(url.split('?')[1]).get('id');
          const isBlockAction = url.includes('/blockCostumer');
          const endpoint = isBlockAction ? '/admin/blockCostumer' : '/admin/unblockCostumer';

          try {
            const response = await axios.post(endpoint, { id: userId });
            if (response.data.success) {
              // Toggle button state visually
              if (isBlockAction) {
                link.textContent = 'Unblock';
                link.className = 'unblock-button action-link';
                link.setAttribute('href', `/admin/unblockCostumer?id=${userId}`);
              } else {
                link.textContent = 'Block';
                link.className = 'block-button action-link';
                link.setAttribute('href', `/admin/blockCostumer?id=${userId}`);
              }
              showAlert('success', response.data.message || `User ${isBlockAction ? 'blocked' : 'unblocked'} successfully`);
            } else {
              showAlert('danger', response.data.message || 'Action failed');
            }
          } catch (error) {
            console.error(`Error ${isBlockAction ? 'blocking' : 'unblocking'} user:`, error);
            showAlert('danger', error.response?.data?.message || `Error ${isBlockAction ? 'blocking' : 'unblocking'} user`);
          }
        });
      });
    });
  </script>
</body>

</html>