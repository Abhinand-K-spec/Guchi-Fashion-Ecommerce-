<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Product Management</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(145deg, #1c1c1e, #131314);
      color: #eaeaea;
      margin: 0;
    }

    .container {
      max-width: 1200px;
      margin: 40px auto;
      background: #212124;
      padding: 45px 50px;
      border-radius: 16px;
      box-shadow: 0 15px 45px rgba(0,0,0,0.9);
    }

    h2 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 25px;
      color: #fff;
    }

    .search-bar {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 25px;
    }

    .search-bar input {
      flex: 1;
      background-color: #2c2c2e;
      color: #fff;
      border: 1px solid #3a3a3c;
      padding: 10px 14px;
      border-radius: 10px;
      font-size: 15px;
    }

    .btn-search {
      background-color: #0a84ff;
      color: white;
      padding: 10px 18px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
    }

    .btn-clear {
      background-color: transparent;
      color: #ccc;
      padding: 10px 18px;
      border: 1px solid #444;
      border-radius: 10px;
      text-decoration: none;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      color: #f5f5f5;
    }

    th, td {
      padding: 12px;
      border: 1px solid #444;
      text-align: center;
    }

    th {
      background-color: #0a84ff;
      color: white;
      font-weight: 600;
    }

    .product-images img {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 6px;
      margin: 2px;
    }

    .btn-block, .btn-edit {
      padding: 6px 14px;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
    }

    .btn-block {
      background-color: #e11d48;
      color: #fff;
    }

    .btn-edit {
      background-color: #0a84ff;
      color: white;
    }

    .status {
      font-weight: 600;
      color: #00ff9d;
    }

    .pagination {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      gap: 8px;
      flex-wrap: wrap;
    }

    .pagination a {
      padding: 8px 14px;
      border-radius: 6px;
      text-decoration: none;
      background-color: #2c2c2e;
      border: 1px solid #444;
      color: #ccc;
      font-weight: 500;
    }

    .pagination a.active {
      background-color: #0a84ff;
      color: white;
      border-color: #0a84ff;
    }

    .action-btn {
      background-color: #e11d48;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
    }

    .action-btn:hover {
      background-color: #b91c1c;
    }

    .offer-display {
      display: inline-flex;
      align-items: center;
      gap: 5px;
    }

    .offer-input {
      width: 100%;
      margin-bottom: 10px;
      background-color: #2c2c2e;
      border: 1px solid #3a3a3c;
      color: #dddddd;
      padding: 12px 15px;
      border-radius: 10px;
      font-size: 15px;
    }

    .offer-input:focus {
      border-color: #0a84ff;
      outline: none;
      color: #fff;
    }

    .offer-input::placeholder {
      color: #999;
    }

    .modal-content {
      background-color: #0000;
      color: #000;
      border: 1px solid #3a3a3c;
      border-radius: 10px;
    }

    .modal-header {
      background-color: #2c2c2e;
      border-bottom: 1px solid #444;
    }

    .modal-title {
      color: #ffffff;
      font-weight: 600;
    }

    .modal-body {
      padding: 20px;
      background-color: #000;
    }

    .modal-footer {
      color: #000;
      border-top: 1px solid #444;
    }

    .btn-close {
      background-color: #444;
      opacity: 1;
    }

    .btn-close:hover {
      background-color: #555;
    }

    .btn-primary {
      background-color: #0a84ff;
      color: white;
      padding: 10px 24px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
    }

    .btn-primary:hover {
      background-color: #0066cc;
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid #444;
      color: #aaa;
      padding: 8px 18px;
      border-radius: 8px;
      font-weight: 500;
    }

    .btn-secondary:hover {
      background-color: #2e2e2e;
    }

    .error {
      color: #ff6b6b;
      font-size: 14px;
      display: none;
      margin-bottom: 15px;
    }

    .toast {
      position: fixed;
      bottom: 20px;
      right: 20px;
      min-width: 250px;
      background-color: #2c2c2e;
      color: #fff;
      border: 1px solid #444;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.5);
      z-index: 1000;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .toast.show {
      opacity: 1;
    }

    .toast.error {
      background-color: #e11d48;
      border-color: #b91c1c;
    }
  </style>
</head>

<body>
  <%- include("../partials/admin/header") %>

  <div class="container">
    <h2>Product Management</h2>

    <form method="GET" action="/admin/products" class="search-bar" id="filterForm">
      <input type="text" name="search" placeholder="Search products or category" value="<%= typeof search !== 'undefined' ? search : '' %>" />
      <button type="submit" class="btn-search">Search</button>
      <a href="/admin/products" class="btn-clear">Clear</a>
    </form>

    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Images</th>
          <th>Category</th>
          <th>Regular Price</th>
          <th>Sale Price</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Offer</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="productTableBody">
        <% products.forEach(product => { %>
          <tr id="product-<%= product._id %>">
            <td><%= product.name %></td>
            <td class="product-images">
              <% product.images.forEach(img => { %>
                <img src="<%= img %>" alt="Product Image" />
              <% }) %>
            </td>
            <td><%= product.category %></td>
            <td>₹<%= product.regularPrice.toFixed(2) %></td>
            <td>₹<%= product.salePrice.toFixed(2) %></td>
            <td><%= product.stock %></td>
            <td class="status"><%= product.isAvailable ? 'Available' : 'Blocked' %></td>
            <td>
              <div id="offer-<%= product._id %>" class="offer-display">
                <% if (product.offer && product.offer.Discount !== undefined) { %>
                  <span><%= product.offer.Discount %>%</span>
                  <button class="action-btn btn-sm" onclick="removeOffer('<%= product._id %>', '<%= product.offer._id %>', '<%= currentPage %>')">Remove</button>
                <% } else { %>
                  <button class="btn btn-primary btn-sm offer-btn" data-bs-toggle="modal" data-bs-target="#offerModal" onclick="showOfferInput('<%= product._id %>')">Add Offer</button>
                <% } %>
              </div>
            </td>
            <td>
              <form action="/admin/<%= product.isAvailable ? 'unlistProduct' : 'listProduct' %>/<%= product._id %>?page=<%= currentPage %>" method="POST" style="display: inline;" onsubmit="handleListUnlist(event, '<%= product._id %>', '<%= product.isAvailable ? 'unlist' : 'list' %>', '<%= currentPage %>')">
                <button class="action-btn btn-sm"><%= product.isAvailable ? 'Unlist' : 'List' %></button>
              </form>
              <form action="/admin/editProduct/<%= product._id %>?page=<%= currentPage %>" method="GET" style="display: inline;">
                <button class="btn btn-primary btn-sm">Edit</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% if (totalPages > 1) { %>
      <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/admin/products?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="<%= currentPage === i ? 'active' : '' %>">
            <%= i %>
          </a>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Offer Modal -->
  <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="offerModalLabel">Add Product Offer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <span id="offer-error" class="error"></span>
          <div id="offerFormContainer" class="offer-form">
            
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary offer-submit" id="submitOfferBtn">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentProductId = null;
    let currentPage = '<%= currentPage %>';

    function showToast(message, isError = false) {
      const toast = document.createElement('div');
      toast.className = `toast ${isError ? 'error' : ''}`;
      toast.innerText = message;
      document.body.appendChild(toast);
      setTimeout(() => toast.classList.add('show'), 100);
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 300);
      }, 3000);
    }

    function showOfferInput(productId) {
      console.log('Opening modal for productId:', productId);
      currentProductId = productId;
      const offerFormContainer = document.getElementById('offerFormContainer');
      offerFormContainer.innerHTML = `
        <input type="text" class="offer-input" id="offerName-${productId}" placeholder="Offer Name" />
        <input type="date" class="offer-input" id="startDate-${productId}" />
        <input type="date" class="offer-input" id="endDate-${productId}" />
        <input type="number" class="offer-input" id="discount-${productId}" placeholder="Discount %" min="0" max="100" />
      `;
    }

    document.getElementById('submitOfferBtn').addEventListener('click', () => {
      console.log('Submit button clicked, currentProductId:', currentProductId);
      if (!currentProductId) {
        displayErrorMessage('offer-error', 'No product selected.');
        return;
      }
      submitOffer(currentProductId, currentPage);
    });

    document.getElementById('offerModal').addEventListener('hidden.bs.modal', () => {
      console.log('Modal closed, clearing form');
      document.getElementById('offerFormContainer').innerHTML = '';
      document.getElementById('offer-error').innerText = '';
      document.getElementById('offer-error').style.display = 'none';
      currentProductId = null;
    });

    function displayErrorMessage(id, msg) {
      const el = document.getElementById(id);
      if (el) {
        el.innerText = msg;
        el.style.display = 'block';
      }
    }

    function clearErrorMsg() {
      const el = document.getElementById('offer-error');
      if (el) {
        el.innerText = '';
        el.style.display = 'none';
      }
    }

    async function submitOffer(productId, page) {
      console.log('Submitting offer for productId:', productId, 'page:', page);
      clearErrorMsg();
      const offerName = document.getElementById(`offerName-${productId}`)?.value.trim();
      const startDate = document.getElementById(`startDate-${productId}`)?.value;
      const endDate = document.getElementById(`endDate-${productId}`)?.value;
      const discount = document.getElementById(`discount-${productId}`)?.value.trim();

      if (!offerName || !startDate || !endDate || !discount) {
        displayErrorMessage('offer-error', 'Offer name, start date, end date, and discount are required.');
        return;
      }

      if (isNaN(discount) || discount < 0 || discount > 100) {
        displayErrorMessage('offer-error', 'Discount must be between 0 and 100.');
        return;
      }

      if (new Date(startDate) > new Date(endDate)) {
        displayErrorMessage('offer-error', 'Start date cannot be later than end date.');
        return;
      }



    

      try {
        const response = await axios.post(`/admin/addProductOffer/${productId}?page=${page}`, {
          OfferName: offerName,
          StartDate: startDate,
          EndDate: endDate,
          Discount: discount,

        });
        console.log('Axios response:', response.status);
        const modal = bootstrap.Modal.getInstance(document.getElementById('offerModal'));
        modal.hide();
        showToast('Offer added successfully');
        updateOfferDisplay(productId, { Discount: discount });
      } catch (error) {
        console.error('Axios error:', error);
        displayErrorMessage('offer-error', error.response?.data?.error || 'Failed to add offer');
      }
    }

    async function removeOffer(productId, offerId, page) {
      console.log('Removing offer for productId:', productId, 'offerId:', offerId);
      try {
        const response = await axios.post(`/admin/removeProductOffer/${productId}?page=${page}`, { offerId });
        console.log('Remove offer response:', response.status);
        showToast('Offer removed successfully');
        updateOfferDisplay(productId, null);
      } catch (error) {
        console.error('Remove offer error:', error);
        showToast(error.response?.data?.error || 'Failed to remove offer', true);
      }
    }

    async function handleListUnlist(event, productId, action, page) {
      event.preventDefault();
      try {
        const response = await axios.post(`/admin/${action}Product/${productId}?page=${page}`);
        console.log(`${action} response:`, response.status);
        showToast(`Product ${action}ed successfully`);
        updateProductStatus(productId, action === 'list');
      } catch (error) {
        console.error(`${action} error:`, error);
        showToast(error.response?.data?.error || `Failed to ${action} product`, true);
      }
    }

    function updateOfferDisplay(productId, offer) {
      const offerDisplay = document.getElementById(`offer-${productId}`);
      if (offer) {
        offerDisplay.innerHTML = `
          <span>${offer.Discount}%</span>
          <button class="action-btn btn-sm" onclick="removeOffer('${productId}', '${offer._id || 'temp'}', '${currentPage}')">Remove</button>
        `;
      } else {
        offerDisplay.innerHTML = `
          <button class="btn btn-primary btn-sm offer-btn" data-bs-toggle="modal" data-bs-target="#offerModal" onclick="showOfferInput('${productId}')">Add Offer</button>
        `;
      }
    }

    function updateProductStatus(productId, isAvailable) {
      const row = document.getElementById(`product-${productId}`);
      const statusCell = row.querySelector('.status');
      const actionForm = row.querySelector('form[action*="/admin/"]');
      statusCell.textContent = isAvailable ? 'Available' : 'Blocked';
      actionForm.action = `/admin/${isAvailable ? 'unlistProduct' : 'listProduct'}/${productId}?page=${currentPage}`;
      actionForm.querySelector('button').textContent = isAvailable ? 'Unlist' : 'List';
    }
  </script>
</body>
</html>