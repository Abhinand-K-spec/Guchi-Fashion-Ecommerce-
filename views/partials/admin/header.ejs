<!-- Bootstrap & FontAwesome (Included here to ensure availability if missing in parent) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
  /* Sidebar Styles */
  .sidebar {
    width: 250px;
    background-color: #2c3e50;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 1000;
    overflow-y: auto;
  }

  .sidebar h2 {
    background-color: #1a252f;
    padding: 1.2rem;
    text-align: center;
    font-size: 22px;
    margin: 0;
    letter-spacing: 1px;
    color: #fff;
  }

  .nav-links,
  .bottom-links {
    display: flex;
    flex-direction: column;
  }

  .nav-links a,
  .bottom-links a {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    transition: background 0.3s;
    border-left: 4px solid transparent;
  }

  .nav-links a:hover,
  .bottom-links a:hover,
  .nav-links a.active,
  .bottom-links a.active {
    background-color: #34495e;
    border-left-color: #0d6efd;
    /* Bootstrap primary blue highlight */
  }

  .nav-links i,
  .bottom-links i {
    margin-right: 10px;
    min-width: 20px;
    text-align: center;
  }

  /* Global Body Adjustment for Fixed Sidebar */
  body {
    padding-left: 250px;
    min-height: 100vh;
    background-color: #f4f6f8;
    /* Fallback bg */
  }

  /* Responsive Behavior */
  @media screen and (max-width: 768px) {
    body {
      padding-left: 0;
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      height: auto;
      position: relative;
      /* Not fixed on mobile, scrolls with page */
      flex-direction: row;
      overflow-x: auto;
      overflow-y: hidden;
      bottom: auto;
    }

    .sidebar h2 {
      display: none;
    }

    .nav-links,
    .bottom-links {
      flex-direction: row;
      width: 100%;
    }

    .nav-links {
      flex-grow: 1;
      overflow-x: auto;
    }

    .nav-links a,
    .bottom-links a {
      padding: 1rem;
      font-size: 14px;
      white-space: nowrap;
      border-left: none;
      border-bottom: 4px solid transparent;
    }

    .nav-links a:hover,
    .nav-links a.active {
      border-bottom-color: #0d6efd;
    }

    .bottom-links {
      flex-direction: row;
      width: auto;
    }
  }
</style>

<div class="sidebar">
  <div>
    <h2>Admin Panel</h2>
    <div class="nav-links">
      <a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      <a href="/admin/users"><i class="fas fa-users"></i> Customers</a>
      <a href="/admin/category"><i class="fas fa-th-list"></i> Category</a>
      <a href="/admin/addProducts"><i class="fas fa-plus-square"></i> Add Product</a>
      <a href="/admin/products"><i class="fas fa-box-open"></i> Products</a>
      <a href="/admin/coupon"><i class="fas fa-ticket-alt"></i> Coupon</a>
      <a href="/admin/orders"><i class="fas fa-shopping-cart"></i> Orders</a>
      <a href="/admin/sales"><i class="fas fa-chart-line"></i> Sales</a>
    </div>
  </div>
  <div class="bottom-links">
    <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </div>
</div>

<script>
  // Highlight active link
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll('.nav-links a, .bottom-links a');

    links.forEach(link => {
      const linkPath = new URL(link.href, window.location.origin).pathname;
      if (linkPath === currentPath) {
        link.classList.add('active');
      }
    });
  });
</script>