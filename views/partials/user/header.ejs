<head>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-8xXEmR/qyX3+VnJKzMvWWOwSbC0I8C3CTYjAO3h0UzUnKPKuf5jJmM+82Mn9n6Ne" crossorigin="anonymous">
  <style>
    .header {
      background: url('/img/hero/hero-2.jpg') no-repeat center center;
      background-size: cover;
    }

    #guchi-logo {
      width: 130px;
    }

    #walletIcon {
      width: 5vh;
    }

    /* Responsive Header Styles */
    @media only screen and (max-width: 991px) {

      /* Show hamburger menu */
      .canvas__open {
        display: block !important;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 24px;
        color: #111;
        cursor: pointer;
        z-index: 100;
      }

      /* Hide desktop menu */
      .header__menu {
        display: none;
      }

      /* Hide desktop nav options */
      .header__nav__option {
        display: none;
      }

      /* Adjust header layout */
      .header .container {
        position: relative;
      }

      .header__logo {
        text-align: center;
        padding: 15px 0;
      }

      #guchi-logo {
        width: 100px;
      }

      /* Mobile menu wrapper */
      .offcanvas-menu-wrapper {
        position: fixed;
        left: -300px;
        top: 0;
        width: 300px;
        height: 100%;
        background: #fff;
        z-index: 99999;
        padding: 30px 20px;
        overflow-y: auto;
        transition: all 0.3s;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
      }

      .offcanvas-menu-wrapper.active {
        left: 0;
      }

      .offcanvas-menu-overlay {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 99998;
        display: none;
      }

      .offcanvas-menu-overlay.active {
        display: block;
      }

      /* Mobile menu navigation */
      #mobile-menu-wrap ul {
        list-style: none;
        padding: 0;
        margin: 20px 0;
      }

      #mobile-menu-wrap ul li {
        border-bottom: 1px solid #f0f0f0;
      }

      #mobile-menu-wrap ul li a {
        display: block;
        padding: 12px 0;
        color: #111;
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
      }

      #mobile-menu-wrap ul li a:hover,
      #mobile-menu-wrap ul li.active a {
        color: #e53637;
      }

      .offcanvas__nav__option {
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
      }

      .offcanvas__nav__option a {
        display: inline-block;
        margin: 0 10px;
      }

      .offcanvas__nav__option img {
        width: 24px;
        height: 24px;
      }

      .offcanvas__text {
        text-align: center;
        margin-top: 20px;
      }

      .offcanvas__text p {
        color: #111;
        font-size: 14px;
        margin: 0;
      }
    }

    @media only screen and (max-width: 767px) {
      .header__top {
        padding: 8px 0;
      }

      .header__top__left p {
        font-size: 12px;
      }

      .header__top__links a {
        font-size: 11px;
        margin-right: 10px;
      }

      #guchi-logo {
        width: 80px;
      }

      .header__logo {
        padding: 10px 0;
      }
    }

    @media only screen and (max-width: 479px) {
      .header__top__left {
        display: none;
      }

      .header__top__right {
        text-align: center;
        width: 100%;
      }

      #guchi-logo {
        width: 70px;
      }
    }
  </style>
</head>


<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
