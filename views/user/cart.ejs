<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Your Cart</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    a { text-decoration: none; }
    .cart__table table { width: 100%; border-collapse: collapse; }
    .cart__table th, .cart__table td {
      padding: 20px;
      border: 1px solid #ebebeb;
      text-align: center;
      vertical-align: middle;
    }
    .cart__product__item img { width: 70px; border-radius: 4px; }
    .cart__quantity .pro-qty {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .pro-qty input {
      width: 40px;
      text-align: center;
      border: 1px solid #ccc;
      margin: 0 5px;
      padding: 5px;
    }
    .pro-qty button.qtybtn {
      border: none;
      background: #f5f5f5;
      padding: 5px 10px;
      cursor: pointer;
    }
    .cart__btn a {
      background-color: #000;
      color: #fff;
      padding: 12px 30px;
      display: inline-block;
      text-transform: uppercase;
      font-weight: 600;
    }
    .cart__total {
      background: #f6f6f6;
      padding: 30px;
      border: 1px solid #ebebeb;
      text-align: right;
    }
    .cart__total h6 { font-weight: 700; margin-bottom: 20px; }
    .cart__total ul { list-style: none; padding: 0; margin: 0; }
    .cart__total ul li { font-size: 16px; margin-bottom: 10px; }
    .cart__total .primary-btn {
      background-color: #000;
      color: #fff;
      padding: 10px 25px;
      text-transform: uppercase;
      font-weight: 600;
      display: inline-block;
      margin-top: 20px;
    }
    .cart__total .primary-btn.hide { display: none; }
    .price-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    .product-price {
      color: #e74c3c;
      font-weight: bold;
    }
    .offer-percentage {
      color: #e74c3c;
      font-weight: bold;
      font-size: 0.9rem;
    }
    .regular-price {
      font-size: 0.9rem;
      color: #999;
      text-decoration: line-through;
    }
  </style>
</head>

<%- include('../partials/user/header') %>

<section class="shopping-cart spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <% if (cartItems.length === 0) { %>
          <h4 class="text-center">Your cart is empty or the item was already ordered.</h4>
        <% } else { %>
        <div class="cart__table">
          <table>
            <thead>
              <tr>
                <th>Image</th>
                <th class="p-name">Product Name</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% cartItems.forEach(item => { %>
                <tr data-product-id="<%= item._id %>" data-size="<%= item.size %>">
                  <td class="cart__product__item">
                    <img src="<%= item.image %>" alt="Product Image" />
                  </td>

                  <td class="cart__product__item__title">
                    <h6><%= item.name %></h6>
                  </td>

                  <td>
                    <span class="badge bg-dark"><%= item.size %></span>
                  </td>

                  <td class="cart__price">
                    <span class="product-price">â‚¹<%= item.price.toFixed(2) %></span>
                  </td>

                  <td class="cart__quantity">
                    <% if (item.stock > 0) { %>
                      <div class="pro-qty" data-stock="<%= item.stock %>">
                        <button class="dec qtybtn" data-id="<%= item._id %>">-</button>
                        <input type="text" value="<%= item.quantity %>" readonly />
                        <button class="inc qtybtn" data-id="<%= item._id %>">+</button>
                      </div>
                    <% } else { %>
                      <span class="text-danger">Out of Stock</span>
                    <% } %>
                  </td>

                  <td class="cart__total">â‚¹<%= item.itemTotal.toFixed(2) %></td>

                  <td class="cart__close">
                    <button
                      class="remove-from-cart btn btn-sm btn-outline-danger"
                      data-id="<%= item._id %>"
                      data-size="<%= item.size %>">
                      <i class="fa fa-close"></i>
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="row mt-4">
          <div class="col-lg-6">
            <div class="cart__btn">
              <a href="/shopnow">Continue Shopping</a>
            </div>
          </div>

          <div class="col-lg-6 text-right">
            <div class="cart__total">
              <h6>Cart total</h6>
              <ul>
                <li>Subtotal <span class="subtotal">â‚¹<%= totalPrice.toFixed(2) %></span></li>
              </ul>

              <% const hasOutOfStock = cartItems.some(item => item.stock < item.quantity); %>

              <% if (hasOutOfStock) { %>
                <p class="text-danger out-of-stock-msg">
                  Please remove the out-of-stock item to continue.
                </p>
              <% } %>

              <a href="/checkout" class="primary-btn <%= hasOutOfStock ? 'hide' : '' %>">
                Proceed to checkout
              </a>
            </div>
          </div>
        </div>

        <% } %>

      </div>
    </div>
  </div>

  <!-- Quantity limit modal -->
  <div class="modal fade" id="qtyLimitModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content text-center">
        <div class="modal-header">
          <h5 class="modal-title">Quantity Limit</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="qtyModalMessage"></div>
      </div>
    </div>
  </div>

  <!-- Remove modal -->
  <div class="modal fade" id="removeCartModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Remove Item</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">Are you sure you want to remove this item?</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button id="confirmRemoveBtn" class="btn btn-danger">Remove</button>
        </div>
      </div>
    </div>
  </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function showQtyModal(message) {
    const msgEl = document.getElementById("qtyModalMessage");
    const modalEl = document.getElementById("qtyLimitModal");

    msgEl.innerText = message;
    const modal = new bootstrap.Modal(modalEl);
    modal.show();
    setTimeout(() => modal.hide(), 2000);
  }

  // ðŸ”¥ UPDATE CART UI AFTER AJAX RESPONSE
  function updateCartUI(cartItems, totalPrice) {
    const tbody = document.querySelector('.cart__table tbody');
    const subtotalEl = document.querySelector('.subtotal');
    const proceedBtn = document.querySelector('.cart__total .primary-btn');
    const totalBox = document.querySelector('.cart__total');

    if (subtotalEl) {
      subtotalEl.textContent = `â‚¹${totalPrice.toFixed(2)}`;
    }

    // Update each row (quantity + line total)
    cartItems.forEach(item => {
      const row = tbody.querySelector(
        `tr[data-product-id="${item._id}"][data-size="${item.size}"]`
      );

      if (row) {
        const qtyInput = row.querySelector('.pro-qty input');
        const totalCell = row.querySelector('.cart__total');
        const qtyContainer = row.querySelector('.pro-qty');

        if (qtyInput) qtyInput.value = item.quantity;
        if (totalCell) totalCell.textContent = `â‚¹${item.itemTotal.toFixed(2)}`;
        if (qtyContainer) qtyContainer.dataset.stock = item.stock;
      }
    });

    // Recompute out-of-stock flag from updated items
    const hasOutOfStock = cartItems.some(item => item.stock < item.quantity);

    // Handle "Proceed to checkout" button + message
    if (proceedBtn) {
      if (hasOutOfStock) {
        proceedBtn.classList.add('hide');
      } else {
        proceedBtn.classList.remove('hide');
      }
    }

    // Manage out-of-stock warning message
    let msgEl = totalBox.querySelector('.out-of-stock-msg');
    if (hasOutOfStock) {
      if (!msgEl) {
        msgEl = document.createElement('p');
        msgEl.className = 'text-danger out-of-stock-msg';
        msgEl.textContent = 'Please remove the out-of-stock item to continue.';
        totalBox.insertBefore(msgEl, proceedBtn);
      }
    } else {
      if (msgEl) msgEl.remove();
    }

    // Re-attach quantity listeners (since DOM may be updated)
    attachQtyButtonListeners();
  }

  // ðŸ”¥ ATTACH QTY BUTTON EVENTS (NO LOCAL INCREMENT, BACKEND IS SOURCE OF TRUTH)
  function attachQtyButtonListeners() {
    document.querySelectorAll(".qtybtn").forEach(btn => {
      btn.onclick = async function () {
        const row = this.closest("tr");
        const productId = row.dataset.productId;
        const size = row.dataset.size;

        const isIncrement = this.classList.contains("inc");
        const qtyContainer = row.querySelector(".pro-qty");
        const input = qtyContainer.querySelector("input");

        const currentQty = parseInt(input.value);
        const stock = parseInt(qtyContainer.dataset.stock);

        // Validation only â€“ do NOT change UI here
        if (isIncrement && currentQty >= 5) {
          return showQtyModal("Max 5 allowed.");
        }
        if (isIncrement && currentQty >= stock) {
          return showQtyModal(`Only ${stock} available.`);
        }
        if (!isIncrement && currentQty <= 1) {
          return showQtyModal("Min quantity is 1.");
        }

        // Disable +/- buttons to prevent double clicks
        const buttons = qtyContainer.querySelectorAll(".qtybtn");
        buttons.forEach(b => (b.disabled = true));

        try {
          const res = await fetch(`/cart/update-quantity/${productId}`, {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              action: isIncrement ? "increment" : "decrement",
              size: size
            })
          });

          const data = await res.json();

          if (data.success) {
            updateCartUI(data.cartItems, data.totalPrice);
          } else {
            showQtyModal(data.message || "Failed to update quantity.");
          }
        } catch (err) {
          console.error("Quantity update error:", err);
          showQtyModal("Something went wrong.");
        } finally {
          // Re-enable buttons
          buttons.forEach(b => (b.disabled = false));
        }
      };
    });
  }

  attachQtyButtonListeners();

  // ðŸ”¥ REMOVE FROM CART (PRODUCT + SIZE)
  let removeProductId = null;
  let removeSize = null;

  const removeModal = new bootstrap.Modal(document.getElementById("removeCartModal"));
  const confirmRemoveBtn = document.getElementById("confirmRemoveBtn");

  document.querySelectorAll(".remove-from-cart").forEach(btn => {
    btn.onclick = function () {
      removeProductId = this.dataset.id;
      removeSize = this.dataset.size;
      removeModal.show();
    };
  });

  confirmRemoveBtn.onclick = function () {
    if (!removeProductId || !removeSize) return;

    fetch(`/cart/remove/${removeProductId}`, {
      method: "DELETE",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ size: removeSize })
    })
      .then(res => res.json())
      .then(async data => {
        if (data.success) {
          const row = document.querySelector(
            `tr[data-product-id="${removeProductId}"][data-size="${removeSize}"]`
          );
          if (row) row.remove();

          // After remove, refresh totals + quantities from backend
          const res = await fetch('/cart/data');
          const json = await res.json();
          if (json.success) {
            updateCartUI(json.cartItems, json.totalPrice);
          }
        } else {
          showQtyModal("Failed to remove item.");
        }
      })
      .catch(err => {
        console.error("Remove error:", err);
        showQtyModal("Something went wrong.");
      })
      .finally(() => {
        removeProductId = null;
        removeSize = null;
        removeModal.hide();
      });
  };
</script>

<%- include('../partials/user/footer') %>
