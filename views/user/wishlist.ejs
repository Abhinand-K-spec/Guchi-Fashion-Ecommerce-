<%- include('../partials/user/header') %>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-device-width, initial-scale=1.0" />
  <title>Wishlist | My E-Commerce Site</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="icon" href="/images/favicon.png" type="image/png" />
  <style>
    .wishlist-item { display: flex; align-items: center; gap: 15px; }
    .wishlist-img { width: 80px; height: 80px; object-fit: cover; border-radius: 5px; }
    .wishlist-details { flex: 1; }
    .wishlist-price { color: #000; font-weight: bold; }
    .wishlist-actions { display: flex; gap: 10px; }
    .empty-wishlist { text-align: center; color: #6c757d; height: 30%;}
    .stock-warning { color: #dc3545; font-size: 0.9rem; }
    a{text-decoration: none;}
  </style>
</head>
<body>
  <!-- Toast Container -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="notificationToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body"></div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <h3>My Wishlist</h3>
    <% if (wishlistItems && wishlistItems.length > 0) { %>
      <div class="row">
        <% wishlistItems.forEach(item => { %>
          <div class="col-12 mb-3 border rounded p-3">
            <div class="wishlist-item">
              <img src="<%= item.product.Image && item.product.Image[0] ? item.product.Image[0] : '/images/default.jpg' %>" class="wishlist-img" alt="<%= item.product.productName || 'Product' %>">
              <div class="wishlist-details">
                <h5><%= item.product.productName || 'Product Unavailable' %></h5>
                <p class="wishlist-price">â‚¹<%= (item.product.Variants && item.product.Variants[0]?.Price || 0).toFixed(2) %></p>
                <% if (item.product.Variants && item.product.Variants[0]?.Stock <= 0) { %>
                  <p class="stock-warning">Out of stock</p>
                <% } %>
              </div>
              <div class="wishlist-actions">
                <button class="btn btn-primary btn-sm add-to-cart" data-product-id="<%= item.product._id %>" <%= item.product.Variants && item.product.Variants[0]?.Stock <= 0 ? 'disabled' : '' %>>
                  <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
                <button class="btn btn-outline-danger btn-sm remove-from-wishlist" data-wishlist-id="<%= item._id %>">
                  <i class="fas fa-trash"></i> Remove
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="empty-wishlist">Your wishlist is empty. <a href="/shopnow">Browse products </a> to add items.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const userId = '<%= userId || "" %>';
      if (!userId) {
        const toastEl = document.getElementById('notificationToast');
        const toastBody = toastEl.querySelector('.toast-body');
        toastEl.classList.remove('bg-success', 'bg-danger', 'text-white');
        toastEl.classList.add('bg-warning', 'text-dark');
        toastBody.textContent = 'Please log in to manage your wishlist.';
        const toast = new bootstrap.Toast(toastEl);
        toast.show();
        setTimeout(() => { window.location.href = '/login'; }, 2000);
        return;
      }


      document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', async (e) => {
          const productId = e.currentTarget.getAttribute('data-product-id');
          console.log('Adding to cart:', { productId });

          try {
            const response = await fetch('/wishlist/add-to-cart', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ productId, userId })
            });

            const result = await response.json();
            const toastEl = document.getElementById('notificationToast');
            const toastBody = toastEl.querySelector('.toast-body');
            toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
            if (result.success) {
              toastEl.classList.add('bg-success', 'text-white');
              toastBody.textContent = ' Product successfully added to cart and removed from wishlist.';
              const toast = new bootstrap.Toast(toastEl);
              toast.show();
              setTimeout(() => { window.location.reload(); }, 10000);
            } else {
              toastEl.classList.add('bg-danger', 'text-white');
              toastBody.textContent = ' Failed to add product to cart: ' + (result.message || 'Unknown error.');
              const toast = new bootstrap.Toast(toastEl);
              toast.show();
            }
          } catch (err) {
            console.error('Add to cart error:', err);
            const toastEl = document.getElementById('notificationToast');
            const toastBody = toastEl.querySelector('.toast-body');
            toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
            toastEl.classList.add('bg-danger', 'text-white');
            toastBody.textContent = 'Error adding product to cart.';
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
          }
        });
      });


      document.querySelectorAll('.remove-from-wishlist').forEach(button => {
        button.addEventListener('click', async (e) => {
          const wishlistId = e.currentTarget.getAttribute('data-wishlist-id');
          console.log('Removing from wishlist:', { wishlistId });

          try {
            const response = await fetch('/wishlist/remove', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ wishlistId, userId })
            });

            const result = await response.json();
            const toastEl = document.getElementById('notificationToast');
            const toastBody = toastEl.querySelector('.toast-body');
            toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
            if (result.success) {
              toastEl.classList.add('bg-success', 'text-white');
              toastBody.textContent = 'Product successfully removed from wishlist.';
              const toast = new bootstrap.Toast(toastEl);
              toast.show();
              setTimeout(() => { window.location.reload(); }, 2000);
            } else {
              toastEl.classList.add('bg-danger', 'text-white');
              toastBody.textContent = 'Failed to remove product from wishlist: ' + (result.message || 'Unknown error.');
              const toast = new bootstrap.Toast(toastEl);
              toast.show();
            }
          } catch (err) {
            console.error('Remove from wishlist error:', err);
            const toastEl = document.getElementById('notificationToast');
            const toastBody = toastEl.querySelector('.toast-body');
            toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
            toastEl.classList.add('bg-danger', 'text-white');
            toastBody.textContent = 'Error removing product from wishlist.';
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
          }
        });
      });
    });
  </script>
</body>
<%- include('../partials/user/footer') %>