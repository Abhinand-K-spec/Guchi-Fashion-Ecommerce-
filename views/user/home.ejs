<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="description" content="Male_Fashion Template">
  <meta name="keywords" content="Male_Fashion, personally, creative, html">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Home | Guchi</title>

  <!-- Fonts and CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css">
  <link rel="stylesheet" href="/css/magnific-popup.css" type="text/css">
  <link rel="stylesheet" href="/css/nice-select.css" type="text/css">
  <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
  <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
  <link rel="stylesheet" href="/css/style.css" type="text/css">

  <style>
    .section-title {
      margin: 40px 0 20px;
      font-size: 28px;
      font-weight: bold;
      text-align: center;
    }

    .product-img-action-wrap {
      position: relative;
    }

    .product-img img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 6px;
    }

    .offer-badge {
      position: absolute;
      top: 1px;
      left: 1px;
      background-color: #e11d59;
      color: #fff;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
      z-index: 11;
    }

    .wishlist-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(255, 255, 255, 0.9);
      padding: 10px;
      border-radius: 50%;
      color: #999;
      /* Default color (grey for non-added state) */
      font-size: 18px;
      z-index: 10;
      transition: 0.3s ease;
    }

    .wishlist-btn:hover {
      color: #ff6b6b;
      /* Hover color */
    }

    .wishlist-btn.added {
      color: #ff0000;
      /* Red color when added to wishlist */
    }

    .product-cart-wrap {
      border: 1px solid #eee;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.05);
      margin-bottom: 30px;
    }

    .product-content-wrap {
      text-align: center;
    }

    .product-content-wrap h6 {
      font-size: 18px;
      color: #333;
      margin: 12px 0 5px;
    }

    .product-content-wrap h5 {
      font-size: 16px;
      color: #ff6b6b;
      margin-bottom: 5px;
      font-weight: 600;
    }

    .price-container {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 8px;
    }

    .regular-price {
      font-size: 12px;
      color: #999;
      text-decoration: line-through;
      margin-left: 8px;
    }

    .product-content-wrap a {
      display: inline-block;
      padding: 6px 12px;
      background-color: #2563eb;
      color: white;
      text-transform: uppercase;
      font-size: 13px;
      border-radius: 4px;
      text-decoration: none;
    }

    .product-content-wrap a:hover {
      background-color: #1e40af;
    }


    .toast-container {
      z-index: 1056;
    }

    .toast {
      min-width: 300px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .toast-body {
      font-size: 16px;
      padding: 15px;
      line-height: 1.5;
    }

    .bg-success {
      background-color: #28a745 !important;
      color: #fff !important;
    }

    .bg-danger {
      background-color: #dc3545 !important;
      color: #fff !important;
    }

    .bg-warning {
      background-color: #ffc107 !important;
      color: #333 !important;
    }

    /* Responsive Styles */
    @media only screen and (max-width: 767px) {

      /* Hero Section */
      .hero__items {
        height: auto;
        padding-top: 80px;
        padding-bottom: 60px;
      }

      .hero__text h2 {
        font-size: 28px;
        line-height: 36px;
      }

      .hero__text p {
        font-size: 14px;
        line-height: 22px;
      }

      .hero__text .primary-btn {
        padding: 12px 24px;
        font-size: 13px;
      }

      /* Product Grid - 3 columns on tablets, 2 on phones */
      .product-cart-wrap {
        margin-bottom: 20px;
      }

      .product-img img {
        height: 180px;
      }

      .product-content-wrap h6 {
        font-size: 14px;
        margin: 8px 0 4px;
      }

      .product-content-wrap h5 {
        font-size: 14px;
      }

      .product-content-wrap a {
        font-size: 12px;
        padding: 8px 12px;
      }

      /* Section Spacing */
      .spad {
        padding-top: 40px;
        padding-bottom: 40px;
      }

      .section-title {
        font-size: 20px;
        margin: 25px 0 15px;
      }

      /* Touch-friendly buttons */
      .product-content-wrap a {
        min-height: 40px;
        padding: 10px 12px;
        font-size: 12px;
      }

      .wishlist-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
      }

      .offer-badge {
        font-size: 10px;
        padding: 4px 8px;
      }
    }

    @media only screen and (min-width: 576px) and (max-width: 767px) {

      /* 3 columns on small tablets */
      .product-img img {
        height: 200px;
      }

      .product-content-wrap h6 {
        font-size: 15px;
      }

      .product-content-wrap h5 {
        font-size: 15px;
      }
    }

    @media only screen and (max-width: 575px) {

      /* 2 columns on phones */
      .product-img img {
        height: 160px;
      }

      .product-content-wrap h6 {
        font-size: 13px;
      }

      .product-content-wrap h5 {
        font-size: 13px;
      }

      .product-content-wrap a {
        font-size: 11px;
        padding: 8px 10px;
      }
    }

    @media only screen and (max-width: 479px) {

      /* Extra small devices */
      .hero__text h2 {
        font-size: 24px;
        line-height: 32px;
      }

      .product-img img {
        height: 140px;
      }

      .section-title {
        font-size: 18px;
      }

      .product-content-wrap h6 {
        font-size: 12px;
      }

      .product-content-wrap h5 {
        font-size: 12px;
      }

      .regular-price {
        font-size: 10px;
      }
    }
  </style>
</head>

<body>
  <!-- Toast Container -->
  <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1055;">
    <div id="notificationToast" class="toast align-items-center border-0" role="alert" aria-live="assertive"
      aria-atomic="true" data-bs-autohide="true" data-bs-delay="6000">
      <div class="d-flex">
        <div class="toast-body"></div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
          aria-label="Close"></button>
      </div>
    </div>
  </div>

  <!-- Header -->
  <%- include("../partials/user/header") %>

    <!-- Hero Slider -->
    <section class="hero">
      <div class="hero__slider owl-carousel">
        <div class="hero__items set-bg" data-setbg="img/hero/hero-1.jpg">
          <div class="container">
            <div class="row">
              <div class="col-xl-5 col-lg-7 col-md-8">
                <div class="hero__text">
                  <h2>Fall - Winter Collections 2025</h2>
                  <p>A specialist label creating luxury outfits. Ethically created.</p>
                  <a href="/shopnow" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Add more slider items as needed -->
      </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="product spad">
      <div class="container">
        <h2 class="section-title">New Arrivals</h2>
        <div class="row">
          <% if (products.length===0) { %>
            <div class="col-12">
              <p class="text-center">No new products.</p>
            </div>
            <% } %>
              <% products.forEach(product=> { %>
                <div class="col-lg-3 col-md-4 col-sm-4 col-6">
                  <div class="product-cart-wrap">
                    <div class="product-img-action-wrap">
                      <div class="product-img">
                        <a href="/product-details/<%= product._id %>">
                          <img src="<%= product.Image[0] || '/img/default-product.jpg' %>"
                            alt="<%= product.productName %>">
                        </a>
                      </div>
                      <% if (product.offer) { %>
                        <span class="offer-badge">
                          <%= product.offer.Discount %>% OFF
                        </span>
                        <% } %>
                          <a href="/add-to-wishlist/<%= product._id %>" class="wishlist-btn"
                            data-product-id="<%= product._id %>">
                            <i class="fas fa-heart"></i>
                          </a>
                    </div>
                    <div class="product-content-wrap">
                      <h6>
                        <%= product.productName %>
                      </h6>
                      <% if (product.offer) { %>
                        <div class="price-container">
                          <h5>₹<%= product.Variants[0].salePrice.toFixed(2) %>
                          </h5>
                          <span class="regular-price">₹<%= product.Variants[0].Price.toFixed(2) %></span>
                        </div>
                        <% } else { %>
                          <h5>₹<%= product.Variants[0].Price.toFixed(2) %>
                          </h5>
                          <% } %>
                            <a href="/product-details/<%= product._id %>">View Details</a>
                    </div>
                  </div>
                </div>
                <% }) %>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <%- include("../partials/user/footer") %>

      <!-- JavaScript Libraries -->
      <script src="/js/jquery-3.3.1.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/js/jquery.nice-select.min.js"></script>
      <script src="/js/jquery.nicescroll.min.js"></script>
      <script src="/js/jquery.magnific-popup.min.js"></script>
      <script src="/js/jquery.countdown.min.js"></script>
      <script src="/js/jquery.slicknav.js"></script>
      <script src="/js/mixitup.min.js"></script>
      <script src="/js/owl.carousel.min.js"></script>
      <script src="/js/main.js"></script>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          // Add to Wishlist
          document.querySelectorAll('.wishlist-btn').forEach(button => {
            button.addEventListener('click', async (e) => {
              e.preventDefault();
              const productId = e.currentTarget.getAttribute('data-product-id');
              console.log('Adding to wishlist:', { productId });

              try {
                const response = await fetch(`/add-to-wishlist/${productId}`, {
                  method: 'GET', // Match the route
                  headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();
                const toastEl = document.getElementById('notificationToast');
                const toastBody = toastEl.querySelector('.toast-body');
                toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
                if (result.success) {
                  toastEl.classList.add('bg-success', 'text-white');
                  toastBody.textContent = 'Product successfully added to wishlist.';
                  const toast = new bootstrap.Toast(toastEl);
                  toast.show();
                  // Add 'added' class to the clicked button
                  button.classList.add('added');
                } else if (response.status === 400) {
                  toastEl.classList.add('bg-danger', 'text-white');
                  toastBody.textContent = 'Failed to add product to wishlist: ' + (result.message || 'Product already added.');
                  const toast = new bootstrap.Toast(toastEl);
                  toast.show();
                } else if (response.status === 302 || response.status === 401) {
                  toastEl.classList.add('bg-warning', 'text-dark');
                  toastBody.textContent = 'Please log in to add to wishlist.';
                  const toast = new bootstrap.Toast(toastEl);
                  toast.show();
                  setTimeout(() => { window.location.href = '/login'; }, 8000);
                }
              } catch (err) {
                console.error('Add to wishlist error:', err);
                const toastEl = document.getElementById('notificationToast');
                const toastBody = toastEl.querySelector('.toast-body');
                toastEl.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');
                toastEl.classList.add('bg-danger', 'text-white');
                toastBody.textContent = 'Error adding product to wishlist.';
                const toast = new bootstrap.Toast(toastEl);
                toast.show();
              }
            });
          });
        });
      </script>
</body>

</html>