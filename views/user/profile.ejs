<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <title>Guchi- Profile</title>
  <style>
    body {
      background: url('/img/background.svg');
      background-size: cover;
      margin: 0;
      padding: 0;
    }

    .container-wrapper {
      padding-top: 100px;
      padding-bottom: 60px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .profile-details {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      padding: 60px 30px 30px;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      position: relative;
      width: 100%;
      max-width: 800px;
    }

    .profile-pic-wrapper {
      position: absolute;
      top: -70px;
      left: 50%;
      transform: translateX(-50%);
      width: 140px;
      height: 140px;
      border-radius: 50%;
      border: 5px solid #fff;
      overflow: hidden;
      background-color: #fff;
      z-index: 10;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    a {
      text-decoration: none;
    }

    .profile-pic {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 50%;
    }

    .username-text {
      margin-top: 40px;
      text-align: center;
      font-weight: 600;
      font-size: 1.25rem;
    }

    .right-panel {
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .edit-btn-wrapper {
      text-align: center;
      margin-top: 10px;
    }

    @media (max-width: 767px) {
      .container-wrapper {
        padding-top: 80px;
        padding-bottom: 40px;
      }

      .profile-details {
        padding: 70px 20px 30px;
        margin: 0 15px;
      }

      .profile-pic-wrapper {
        width: 120px;
        height: 120px;
        top: -60px;
      }

      .username-text {
        margin-top: 30px;
        font-size: 1.1rem;
      }

      .right-panel {
        padding: 20px 15px;
      }

      .right-panel h5 {
        font-size: 1.1rem;
      }

      .list-group-item {
        font-size: 14px;
        padding: 10px 12px;
      }

      .edit-btn-wrapper .btn {
        width: 100%;
        min-height: 44px;
        font-size: 14px;
      }

      .referral-code-wrapper {
        flex-direction: column;
        gap: 10px;
      }

      .referral-code-input {
        max-width: 100%;
        width: 100%;
        font-size: 16px;
        /* Prevent iOS zoom */
        min-height: 44px;
      }

      .copy-btn {
        width: 100%;
        min-height: 44px;
        font-size: 14px;
      }
    }

    @media (max-width: 576px) {
      .profile-details {
        padding: 70px 15px 30px;
      }

      .right-panel {
        padding: 15px 10px;
      }

      .username-text {
        margin-top: 25px;
        font-size: 1rem;
      }

      .profile-pic-wrapper {
        width: 100px;
        height: 100px;
        top: -50px;
      }
    }

    /* Added styles for referral code field and copy button */
    .referral-code-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
      gap: 10px;
    }

    .referral-code-input {
      max-width: 200px;
      font-size: 0.9rem;
    }

    .copy-btn {
      font-size: 0.9rem;
    }
  </style>
</head>

<body>
  <%- include('../partials/user/header') %>

    <div class="container container-wrapper">
      <div class="profile-details">
        <div class="profile-pic-wrapper">
          <img src="<%= user.profileImage || '/default-profile.jpeg' %>" alt="Profile" class="profile-pic" />
        </div>

        <div class="username-text">
          <%= user.name.toUpperCase() %>
        </div>

        <%if(user.referalCode){%>
          <div class="referral-code-wrapper">
            <input type="text" class="form-control referral-code-input" value="<%= user.referalCode || '' %>" readonly
              placeholder="No referral code">
            <button class="btn btn-primary copy-btn" onclick="copyReferralCode(this)">
              <i class="fas fa-copy"></i> Copy
            </button>
          </div>
          <%}%>

            <div class="right-panel mt-3">
              <h5 class="mb-4 text-center">Address</h5>
              <% if (user.addresses && user.addresses.length> 0) {
                const primary = user.addresses[0]; %>
                <ul class="list-group mb-3">
                  <li class="list-group-item"><strong>Name:</strong>
                    <%= primary.name %>
                  </li>
                  <li class="list-group-item"><strong>Phone:</strong>
                    <%= primary.phone %>
                  </li>
                  <li class="list-group-item"><strong>Address:</strong>
                    <%= primary.town %>,
                      <%= primary.city %>,
                        <%= primary.state %> -
                          <%= primary.postCode %>
                  </li>
                </ul>
                <% } else { %>
                  <p class="text-muted text-center">No address added.</p>
                  <% } %>

                    <div class="edit-btn-wrapper">
                      <a href="/edit-profile" class="btn btn-warning btn-sm">
                        <i class="fas fa-user-edit"></i> Edit Profile
                      </a>
                    </div>
            </div>
      </div>
    </div>

    <%- include('../partials/user/footer') %>

      <!-- Added JavaScript for copy functionality -->
      <script>
        function copyReferralCode(button) {
          const input = button.previousElementSibling;
          const referralCode = input.value;
          if (referralCode) {
            navigator.clipboard.writeText(referralCode).then(() => {
              button.innerHTML = '<i class="fas fa-check"></i> Copied!';
              button.classList.remove('btn-primary');
              button.classList.add('btn-success');
              setTimeout(() => {
                button.innerHTML = '<i class="fas fa-copy"></i> Copy';
                button.classList.remove('btn-success');
                button.classList.add('btn-primary');
              }, 2000);
            }).catch(err => {
              console.error('Failed to copy referral code:', err);
              alert('Failed to copy referral code.');
            });
          } else {
            alert('No referral code available.');
          }
        }
      </script>
</body>

</html>