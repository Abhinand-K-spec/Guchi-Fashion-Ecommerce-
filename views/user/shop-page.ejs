<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shop | Male-Fashion</title>

  <!-- Fonts & CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;700;900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/style.css">

  <style>
    .category-list {
      list-style: none;
      padding: 0;
    }

    .category-list li {
      padding: 8px 0;
    }

    .category-list a {
      text-decoration: none;
      color: #333;
      font-weight: 500;
    }

    .category-list a:hover {
      color: #ff6b6b;
    }

    .product-card {
      border: 1px solid #eee;
      padding: 15px;
      border-radius: 10px;
      text-align: center;
      margin-bottom: 30px;
      transition: box-shadow 0.3s ease;
    }

    .product-card:hover {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .product-image {
      width: 100%;
      height: 250px;
      object-fit: contain;
      border-radius: 8px;
      margin-bottom: 15px;
      background-color: #f8f8f8;
      padding: 10px;
    }

    .product-image-container {
      position: relative;
    }

    .offer-badge {
      position: absolute;
      top: 1px;
      left: 1px;
      background-color: #e11d59;
      color: #fff;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
      z-index: 11;
    }

    .product-name {
      font-size: 1.1rem;
      font-weight: 600;
      min-height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .product-price {
      color: #e74c3c;
      font-weight: bold;
      font-size: 1.1rem;
    }

    .price-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-top: 8px;
      margin-bottom: 10px;
      min-height: 30px;
    }

    .regular-price {
      font-size: 14px;
      color: #999;
      text-decoration: line-through;
    }

    .btn-view {
      background-color: #ff6b6b;
      color: #fff;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      margin-top: 10px;
    }

    .btn-view:hover {
      background-color: #ff4c4c;
    }

    .pagination .page-item.active .page-link {
      background-color: #ff6b6b;
      border-color: #ff6b6b;
      color: white;
    }

    .filter-form {
      background: #f9f9f9;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .filter-form .form-control,
    .filter-form .form-select {
      min-width: 180px;
    }

    .filter-form .btn {
      min-width: 90px;
    }

    .filter-bar {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
    }

    /* Responsive Styles */
    @media only screen and (max-width: 991px) {

      /* Categories sidebar becomes collapsible */
      .categories-sidebar {
        margin-bottom: 20px;
      }

      .filter-toggle {
        display: block;
        width: 100%;
        margin-bottom: 15px;
      }

      /* Product grid - 3 columns on tablets */
      .product-card {
        margin-bottom: 20px;
      }

      .product-image {
        height: 220px;
      }
    }

    @media only screen and (max-width: 767px) {

      /* Stack filters vertically */
      .filter-form {
        padding: 12px;
      }

      .filter-bar {
        flex-direction: column;
        align-items: stretch;
      }

      .filter-bar>div {
        width: 100%;
      }

      .filter-bar .d-flex {
        flex-direction: column;
        width: 100%;
      }

      .filter-bar .form-control,
      .filter-bar .form-select {
        width: 100%;
        min-width: 100%;
        margin-bottom: 10px;
        font-size: 16px;
        /* Prevent iOS zoom */
        min-height: 44px;
      }

      .filter-bar .btn {
        width: 100%;
        min-height: 44px;
        margin-bottom: 10px;
      }

      /* Product grid - 2 columns on phones */
      .product-image {
        height: 180px;
      }

      .product-name {
        font-size: 0.95rem;
      }

      .product-price {
        font-size: 0.95rem;
      }

      .btn-view {
        width: 100%;
        min-height: 44px;
        font-size: 14px;
      }

      /* Categories list */
      .category-list li {
        padding: 10px 0;
      }

      .category-list a {
        font-size: 14px;
      }

      /* Pagination */
      .pagination {
        flex-wrap: wrap;
      }

      .page-item {
        margin: 2px;
      }

      .page-link {
        padding: 8px 12px;
        font-size: 14px;
      }
    }

    @media only screen and (max-width: 575px) {

      /* Product grid adjustments for small phones */
      .product-image {
        height: 150px;
      }

      .product-name {
        font-size: 0.85rem;
      }

      .product-price {
        font-size: 0.85rem;
      }

      .regular-price {
        font-size: 10px;
      }

      .offer-badge {
        font-size: 10px;
        padding: 4px 6px;
      }
    }

    @media only screen and (max-width: 479px) {
      .container {
        padding-left: 10px;
        padding-right: 10px;
      }

      .product-card {
        padding: 10px;
      }

      .product-image {
        height: 140px;
      }
    }
  </style>
</head>

<body>

  <!-- Header -->
  <%- include("../partials/user/header") %>

    <!-- Shop Section -->
    <div class="container mt-4 mb-5">
      <div class="row">
        <div class="col-md-3 categories-sidebar">
          <!-- Collapse button for mobile -->
          <button class="btn btn-outline-dark filter-toggle d-md-none" type="button" data-bs-toggle="collapse"
            data-bs-target="#categoriesCollapse" aria-expanded="false" aria-controls="categoriesCollapse">
            <i class="fa fa-filter"></i> Filter by Category
          </button>

          <!-- Categories list (collapsible on mobile) -->
          <div class="collapse d-md-block" id="categoriesCollapse">
            <h5 class="mb-3 d-none d-md-block">Categories</h5>
            <ul class="category-list">
              <li><a
                  href="/shop<%= search ? '?search=' + encodeURIComponent(search) : '' %><%= sort ? (search ? '&' : '?') + 'sort=' + sort : '' %>">All
                  Products</a></li>
              <% categories.forEach(category=> { %>
                <li>
                  <a
                    href="/shop?category=<%= category._id %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= sort ? '&sort=' + sort : '' %>">
                    <%= category.categoryName %>
                  </a>
                </li>
                <% }) %>
            </ul>
          </div>
        </div>

        <div class="col-md-9">
          <form method="GET" action="/shop" class="filter-form">
            <div class="filter-bar">
              <% if (categoryId) { %>
                <input type="hidden" name="category" value="<%= categoryId %>">
                <% } %>

                  <div class="d-flex gap-2">
                    <input type="text" name="search" value="<%= search || '' %>" class="form-control"
                      placeholder="Search products...">
                    <select name="sort" class="form-select">
                      <option value="">Sort By</option>
                      <option value="name-asc" <%=sort==='name-asc' ? 'selected' : '' %>>Name: A–Z</option>
                      <option value="name-desc" <%=sort==='name-desc' ? 'selected' : '' %>>Name: Z–A</option>
                      <option value="price-asc" <%=sort==='price-asc' ? 'selected' : '' %>>Price: Low to High</option>
                      <option value="price-desc" <%=sort==='price-desc' ? 'selected' : '' %>>Price: High to Low</option>
                    </select>
                    <input type="number" name="minPrice" class="form-control" placeholder="Min Price"
                      value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>" min="0">
                    <input type="number" name="maxPrice" class="form-control" placeholder="Max Price"
                      value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>" min="0">
                  </div>
                  <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-dark">Search</button>
                    <a href="/shop<%= categoryId ? '?category=' + categoryId : '' %>"
                      class="btn btn-outline-secondary">Clear</a>
                  </div>
            </div>
          </form>

          <div class="row mt-4">
            <% if (products && products.length> 0) { %>
              <% products.forEach(product=> { %>
                <div class="col-lg-4 col-md-6 col-sm-4 col-6">
                  <div class="product-card">
                    <div class="product-image-container">
                      <img src="<%= product.Image[0] || '/img/default-product.jpg' %>" alt="<%= product.productName %>"
                        class="product-image">
                      <% if (product.offer) { %>
                        <span class="offer-badge">
                          <%= product.offer.Discount %>% OFF
                        </span>
                        <% } %>
                    </div>
                    <div class="product-name">
                      <%= product.productName %>
                    </div>
                    <% if (product.offer) { %>
                      <div class="price-container">
                        <div class="product-price">₹<%= product.Variants[0].salePrice.toFixed(2) %>
                        </div>
                        <span class="regular-price">₹<%= product.Variants[0].Price.toFixed(2) %></span>
                      </div>
                      <% } else { %>
                        <div class="product-price">₹<%= product.Variants[0].Price.toFixed(2) %>
                        </div>
                        <% } %>
                          <a href="/product-details/<%= product._id %>" class="btn btn-view">View Details</a>
                  </div>
                </div>
                <% }) %>
                  <% } else { %>
                    <div class="col-12">
                      <p>No products available in this category.</p>
                    </div>
                    <% } %>
          </div>

          <% if (totalPages> 1) { %>
            <div class="row mt-4">
              <div class="col-12 d-flex justify-content-center">
                <nav>
                  <ul class="pagination">
                    <% for (let i=1; i <=totalPages; i++) { %>
                      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link"
                          href="/shop?page=<%= i %><%= categoryId ? '&category=' + categoryId : '' %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= sort ? '&sort=' + sort : '' %><%= typeof minPrice !== 'undefined' && minPrice !== '' ? '&minPrice=' + minPrice : '' %><%= typeof maxPrice !== 'undefined' && maxPrice !== '' ? '&maxPrice=' + maxPrice : '' %>">
                          <%= i %>
                        </a>
                      </li>
                      <% } %>
                  </ul>
                </nav>
              </div>
            </div>
            <% } %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-md-6">
            <div class="footer__about">
              <div class="footer__logo"><a href="#"><img src="/img/footer-logo.png" alt=""></a></div>
              <p>The customer is at the heart of our unique business model, which includes design.</p>
              <a href="#"><img src="/img/payment.png" alt=""></a>
            </div>
          </div>
          <div class="col-lg-2 offset-lg-1 col-md-3">
            <div class="footer__widget">
              <h6>Shopping</h6>
              <ul>
                <li><a href="#">Clothing Store</a></li>
                <li><a href="#">Trending Shoes</a></li>
                <li><a href="#">Accessories</a></li>
                <li><a href="#">Sale</a></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-2 col-md-3">
            <div class="footer__widget">
              <h6>Info</h6>
              <ul>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">Payment Methods</a></li>
                <li><a href="#">Delivery</a></li>
                <li><a href="#">Returns</a></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-3 offset-lg-1 col-md-6">
            <div class="footer__widget">
              <h6>Newsletter</h6>
              <div class="footer__newslatter">
                <p>Be the first to know about new arrivals, look books, sales & promos!</p>
                <form action="#">
                  <input type="text" placeholder="Your email">
                  <button type="submit"><span class="icon_mail_alt"></span></button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-lg-12 text-center">
            <div class="footer__copyright__text">
              <p>©
                <script>document.write(new Date().getFullYear());</script> All rights reserved | Made with ❤️
              </p>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- JS Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>