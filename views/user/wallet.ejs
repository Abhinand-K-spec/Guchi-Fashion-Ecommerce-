<%- include('../partials/user/header') %>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'My E-Commerce Site' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="icon" href="/images/favicon.png" type="image/png" />
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background-color: #ffffff;
      color: #1a1a1a;
      line-height: 1.6;
    }

    /* Header matching your site */
    .site-header {
      background-color: #000000;
      color: #ffffff;
      padding: 15px 0;
      margin-bottom: 40px;
    }

    .site-header .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .site-logo {
      font-size: 24px;
      font-weight: 600;
      color: #ffffff;
      text-decoration: none;
    }

    .site-nav a {
      color: #ffffff;
      text-decoration: none;
      margin-left: 30px;
      font-size: 15px;
      transition: opacity 0.2s;
    }

    .site-nav a:hover {
      opacity: 0.7;
    }

    .site-nav a.active {
      border-bottom: 2px solid #ffffff;
      padding-bottom: 3px;
    }

    /* Main Container */
    .wallet-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px 60px;
    }

    .page-title {
      font-size: 32px;
      font-weight: 600;
      margin-bottom: 40px;
      color: #1a1a1a;
      letter-spacing: -0.5px;
    }

    /* Balance Card - Modern Clean Design */
    .balance-card {
      background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
      border-radius: 16px;
      padding: 40px;
      margin-bottom: 40px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      position: relative;
      overflow: hidden;
    }

    .balance-card::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
      pointer-events: none;
    }

    .balance-label {
      color: rgba(255, 255, 255, 0.7);
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 10px;
    }

    .balance-amount {
      font-size: 48px;
      font-weight: 700;
      color: #ffffff;
      margin-bottom: 0;
      letter-spacing: -1px;
    }

    /* Add Funds Section */
    .add-funds-section {
      background-color: #f8f8f8;
      border-radius: 12px;
      padding: 30px;
      margin-bottom: 40px;
    }

    .add-funds-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 20px;
      color: #1a1a1a;
    }

    .add-funds-form {
      display: flex;
      gap: 15px;
      align-items: flex-start;
      flex-wrap: wrap;
    }

    .form-input {
      flex: 1;
      min-width: 200px;
      padding: 14px 18px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 15px;
      transition: all 0.2s;
      background-color: #ffffff;
    }

    .form-input:focus {
      outline: none;
      border-color: #1a1a1a;
      box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    }

    .btn-add-funds {
      padding: 14px 32px;
      background-color: #ff6b6b;
      color: #ffffff;
      border: none;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
    }

    .btn-add-funds:hover {
      background-color: #ff5252;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
    }

    .btn-add-funds:active {
      transform: translateY(0);
    }

    /* Messages */
    .message {
      padding: 12px 18px;
      border-radius: 8px;
      font-size: 14px;
      margin-top: 15px;
      display: none;
    }

    .error-message {
      background-color: #ffe5e5;
      color: #d32f2f;
      border-left: 4px solid #d32f2f;
    }

    .success-message {
      background-color: #e8f5e9;
      color: #2e7d32;
      border-left: 4px solid #2e7d32;
    }

    /* Transaction History */
    .transaction-section {
      background-color: #ffffff;
    }

    .section-title {
      font-size: 22px;
      font-weight: 600;
      margin-bottom: 25px;
      color: #1a1a1a;
    }

    .transaction-table {
      width: 100%;
      background-color: #ffffff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
      border: 1px solid #e0e0e0;
    }

    .transaction-table table {
      width: 100%;
      border-collapse: collapse;
    }

    .transaction-table thead {
      background-color: #f8f8f8;
    }

    .transaction-table th {
      padding: 16px 20px;
      text-align: left;
      font-size: 13px;
      font-weight: 600;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid #e0e0e0;
    }

    .transaction-table td {
      padding: 18px 20px;
      font-size: 15px;
      color: #1a1a1a;
      border-bottom: 1px solid #f0f0f0;
    }

    .transaction-table tbody tr:last-child td {
      border-bottom: none;
    }

    .transaction-table tbody tr:hover {
      background-color: #fafafa;
    }

    .credit {
      color: #2e7d32;
      font-weight: 600;
    }

    .debit {
      color: #d32f2f;
      font-weight: 600;
    }

    .transaction-type {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
      text-transform: capitalize;
    }

    .transaction-type.credit {
      background-color: #e8f5e9;
      color: #2e7d32;
    }

    .transaction-type.debit {
      background-color: #ffe5e5;
      color: #d32f2f;
    }

   /* Pagination - Updated to match your theme */
.pagination-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30px;
  gap: 8px;
}

.pagination-container button {
  padding: 8px 16px;
  border: 1px solid #e0e0e0;
  background-color: #ffffff;
  color: #1a1a1a;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

/* Hover state for all buttons */
.pagination-container button:hover:not(:disabled) {
  background-color: #f8f8f8;
  border-color: #1a1a1a;
}

/* Active page button - Black background */
.pagination-container button.btn-primary,
.pagination-container .button.btn-primary {
  background-color: #1a1a1a !important;
  color: #ffffff !important;
  border-color: #1a1a1a !important;
}

/* Inactive page numbers - White with border */
.pagination-container button.btn-outline-primary,
.pagination-container .button.btn-outline-primary {
  background-color: #ffffff !important;
  color: #1a1a1a !important;
  border-color: #e0e0e0 !important;
}

/* Prev/Next buttons - Coral pink color matching your theme */
.pagination-container button.btn-secondary {
  background-color: #ff6b6b !important;
  color: #ffffff !important;
  border-color: #ff6b6b !important;
}

.pagination-container button.btn-secondary:hover:not(:disabled) {
  background-color: #ff5252 !important;
  border-color: #ff5252 !important;
}

/* Disabled state for Prev/Next */
.pagination-container button:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  background-color: #e0e0e0 !important;
  border-color: #e0e0e0 !important;
  color: #999 !important;
}

/* Responsive */
@media (max-width: 768px) {
  .pagination-container {
    gap: 5px;
  }
  
  .pagination-container button {
    padding: 6px 12px;
    font-size: 13px;
  }
}

    /* Responsive */
    @media (max-width: 768px) {
      .page-title {
        font-size: 24px;
        margin-bottom: 30px;
      }

      .balance-card {
        padding: 30px 20px;
      }

      .balance-amount {
        font-size: 36px;
      }

      .add-funds-form {
        flex-direction: column;
      }

      .form-input {
        width: 100%;
      }

      .btn-add-funds {
        width: 100%;
      }

      .transaction-table {
        overflow-x: auto;
      }

      .transaction-table table {
        min-width: 500px;
      }

      .site-nav {
        display: none;
      }
    }
    a{
      text-decoration: none;
    }
  </style>
</head>

<body>

  </div>

  <div class="container wallet-container">
    <h1 class="page-title">My Wallet</h1>

    <!-- Wallet Balance Card -->
    <div class="balance-card">
      <div class="balance-label">Current Balance</div>
      <p class="balance-amount">₹ <%=Math.round(wallet.Balance)%></p>
    </div>

    <!-- Add Funds Section -->
    <div class="add-funds-section">
      <h2 class="add-funds-title">Add Funds to Wallet</h2>
      <form id="addFundsForm" class="add-funds-form">
        <input 
          type="number" 
          id="amountInput" 
          class="form-input" 
          placeholder="Enter amount (₹)" 
          min="1" 
          step="0.01" 
          required 
        />
        <button type="submit" class="btn-add-funds">
          <i class="fa-solid fa-plus"></i> Add Funds
        </button>
      </form>
      <div id="errorMessage" class="message error-message"></div>
      <div id="successMessage" class="message success-message"></div>
    </div>

    <!-- Transaction History -->
    <div class="transaction-section">
      <div class="transaction-table">
        <h5>Transaction History</h5>
        <% if (wallet && wallet.Transaction && wallet.Transaction.length > 0) { %>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody id="transactionBody"></tbody>
          </table>
        <% } else { %>
          <p>No transactions found.</p>
        <% } %>
      </div>
    </div>
      
      <!-- Pagination -->
      <!-- <div class="pagination-container" id="paginationContainer">
        <button disabled>Prev</button>
        <button class="active">1</button>
        <button>2</button>
        <button>Next</button>
      </div> -->
    </div>
  </div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ===================== PAGINATION SCRIPT ===================== -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const walletData = <%- JSON.stringify(wallet || {}) %>;
      const transactions = walletData.Transaction || [];
      const rowsPerPage = 5; 
      let currentPage = 1;

      const tbody = document.getElementById('transactionBody');
      const transactionTable = document.querySelector('.transaction-table');

      if (transactions.length > 0) {
        // Create pagination container
        const paginationContainer = document.createElement('div');
        paginationContainer.classList.add('pagination-container','d-flex', 'justify-content-center', 'mt-3');
        transactionTable.appendChild(paginationContainer);

        function renderTable(page) {
          tbody.innerHTML = '';
          const start = (page - 1) * rowsPerPage;
          const end = start + rowsPerPage;
          const pageData = transactions.slice(start, end);

          pageData.forEach(t => {
            const date = new Date(t.TransactionDate)
              .toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' });
            const typeClass = t.TransactionType === 'credit' ? 'text-success' : 'text-danger';
            const sign = t.TransactionType === 'credit' ? '+' : '-';
            const row = `
              <tr>
                <td>${date}</td>
                <td class="${typeClass}">
                  ${t.TransactionType.charAt(0).toUpperCase() + t.TransactionType.slice(1)}
                </td>
                <td class="${typeClass}">
                  ${sign}₹${Math.abs(t.TransactionAmount).toFixed(2)}
                </td>
              </tr>`;
            tbody.insertAdjacentHTML('beforeend', row);
          });

          renderPagination();
        }

        function renderPagination() {
  const totalPages = Math.ceil(transactions.length / rowsPerPage);
  paginationContainer.innerHTML = '';

  // Previous button with coral styling
  const prevBtn = document.createElement('button');
  prevBtn.textContent = 'Prev';
  prevBtn.className = 'btn btn-sm btn-secondary me-2';
  prevBtn.disabled = currentPage === 1;
  paginationContainer.appendChild(prevBtn);

  // Page number buttons
  for (let i = 1; i <= totalPages; i++) {
    const pageBtn = document.createElement('button');
    pageBtn.textContent = i;
    if (i === currentPage) {
      pageBtn.className = 'btn btn-sm btn-primary mx-1'; // Active - Black
    } else {
      pageBtn.className = 'btn btn-sm btn-outline-primary mx-1'; // Inactive - White
    }
    paginationContainer.appendChild(pageBtn);
  }

  // Next button with coral styling
  const nextBtn = document.createElement('button');
  nextBtn.textContent = 'Next';
  nextBtn.className = 'btn btn-sm btn-secondary ms-2';
  nextBtn.disabled = currentPage === totalPages;
  paginationContainer.appendChild(nextBtn);

  // Add click event listeners
  const buttons = paginationContainer.querySelectorAll('button');
  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      if (btn.textContent === 'Prev' && currentPage > 1) {
        currentPage--;
      } else if (btn.textContent === 'Next' && currentPage < totalPages) {
        currentPage++;
      } else if (!isNaN(parseInt(btn.textContent))) {
        currentPage = parseInt(btn.textContent);
      }
      renderTable(currentPage);
    });
  });
}

        renderTable(currentPage);
      }
    });
  </script>

  <!-- ===================== PAYMENT (UNCHANGED) ===================== -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const addFundsForm = document.getElementById('addFundsForm');
      if (!addFundsForm) return; // Skip if addFunds form is hidden

      const amountInput = document.getElementById('amountInput');
      const errorMessage = document.getElementById('errorMessage');
      const successMessage = document.getElementById('successMessage');
      const userId = '<%= userId || "" %>';

      if (!userId) {
        console.error('User ID not defined');
        if (errorMessage) {
          errorMessage.textContent = 'Please log in to add funds.';
          errorMessage.style.display = 'block';
        }
        return;
      }

      addFundsForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        errorMessage.style.display = 'none';
        successMessage.style.display = 'none';

        const amount = parseFloat(amountInput.value);
        if (!amount || amount <= 0) {
          errorMessage.textContent = 'Please enter a valid amount.';
          errorMessage.style.display = 'block';
          return;
        }

        try {
          const response = await fetch('/add-funds', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId, amount })
          });
          const result = await response.json();

          if (!response.ok || !result.success) {
            errorMessage.textContent = result.message || 'Failed to initiate fund addition.';
            errorMessage.style.display = 'block';
            return;
          }

          // Razorpay integration
          const options = {
            key: '<%= RAZORPAY_KEY_ID %>',
            amount: result.order.amount,
            currency: 'INR',
            name: 'Guchi E-Commerce Site',
            description: 'Add Funds to Wallet',
            image: '/guchi-logo.png',
            order_id: result.order.id,
            handler: async function (response) {
              try {
                const verifyResponse = await fetch('/verify-wallet-payment', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    razorpay_payment_id: response.razorpay_payment_id,
                    razorpay_order_id: response.razorpay_order_id,
                    razorpay_signature: response.razorpay_signature,
                    userId,
                    amount
                  })
                });

                const verifyResult = await verifyResponse.json();
                if (verifyResult.success) {
                  successMessage.textContent = `Successfully added ₹${amount.toFixed(2)} to your wallet!`;
                  successMessage.style.display = 'block';
                  setTimeout(() => location.reload(), 2000);
                } else {
                  errorMessage.textContent = verifyResult.message || 'Payment verification failed.';
                  errorMessage.style.display = 'block';
                }
              } catch (err) {
                errorMessage.textContent = 'Error verifying payment. Please try again.';
                errorMessage.style.display = 'block';
              }
            },
            prefill: {
              name: '<%= user?.name || "" %>',
              email: '<%= user?.email || "" %>',
              contact: ''
            },
            theme: { color: '#28a745' },
            modal: {
              ondismiss: () => {
                errorMessage.textContent = 'Payment cancelled. Please try again.';
                errorMessage.style.display = 'block';
              }
            }
          };

          const rzp = new Razorpay(options);
          rzp.on('payment.failed', (response) => {
            errorMessage.textContent = response.error.description || 'Payment failed. Please try again.';
            errorMessage.style.display = 'block';
          });
          rzp.open();
        } catch (err) {
          errorMessage.textContent = 'Error initiating payment. Please try again.';
          errorMessage.style.display = 'block';
        }
      });
    });
  </script>
