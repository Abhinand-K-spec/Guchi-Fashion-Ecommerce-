<%- include('../partials/user/header') %>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'My E-Commerce Site' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="icon" href="/images/favicon.png" type="image/png" />
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <style>
    .wallet-container { max-width: 800px; margin: auto; padding: 20px; }
    .balance-card { background-color: #f8f9fa; border-radius: 10px; padding: 20px; text-align: center; }
    .balance-amount { font-size: 2rem; font-weight: bold; color: #28a745; }
    .transaction-table { margin-top: 20px; }
    .transaction-table th, .transaction-table td { text-align: center; }
    .credit { color: #28a745; }
    .debit { color: #dc3545; }
    .add-funds-container { margin-top: 20px; }
    .add-funds-input { max-width: 200px; }
    .error-message { color: #dc3545; font-size: 0.9rem; margin-top: 0.5rem; }
    .success-message { color: #28a745; font-size: 0.9rem; margin-top: 0.5rem; }
    a{text-decoration: none;}
  </style>
</head>

<body>
  <div class="container wallet-container">
    <h3>My Wallet</h3>

    <!-- Wallet Balance -->
    <div class="balance-card mb-4">
      <h5>Current Balance</h5>
      <p class="balance-amount">₹<%= wallet ? wallet.Balance.toFixed(2) : '0.00' %></p>
      <a href="/checkout" class="btn btn-primary mt-2">
        <i class="fas fa-shopping-cart me-1"></i> Use Wallet for Checkout
      </a>
    </div>

    <!-- Add Funds Form -->
    <!-- <div class="add-funds-container">
      <h5>Add Funds to Wallet</h5>
      <form id="addFundsForm">
        <div class="input-group mb-3">
          <span class="input-group-text">₹</span>
          <input type="number" id="amountInput" class="form-control add-funds-input" placeholder="Enter amount" min="1" step="1" required>
          <button type="submit" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Add Funds
          </button>
        </div>
        <p id="errorMessage" class="error-message" style="display: none;"></p>
        <p id="successMessage" class="success-message" style="display: none;"></p>
      </form>
    </div> -->

    <!-- Transaction History -->
    <div class="transaction-table">
      <h5>Transaction History</h5>
      <% if (wallet && wallet.Transaction && wallet.Transaction.length > 0) { %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% wallet.Transaction.forEach(transaction => { %>
              <tr>
                <td><%= new Date(transaction.TransactionDate).toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
                <td class="<%= transaction.TransactionType === 'credit' ? 'credit' : 'debit' %>">
                  <%= transaction.TransactionType.charAt(0).toUpperCase() + transaction.TransactionType.slice(1) %>
                </td>
                <td class="<%= transaction.TransactionType === 'credit' ? 'credit' : 'debit' %>">
                  <%= transaction.TransactionType === 'credit' ? '+' : '-' %>₹<%= Math.abs(transaction.TransactionAmount).toFixed(2) %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No transactions found.</p>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const addFundsForm = document.getElementById('addFundsForm');
      const amountInput = document.getElementById('amountInput');
      const errorMessage = document.getElementById('errorMessage');
      const successMessage = document.getElementById('successMessage');
      const userId = '<%= userId || "" %>';

      if (!userId) {
        console.error('User ID not defined');
        errorMessage.textContent = 'Please log in to add funds.';
        errorMessage.style.display = 'block';
        return;
      }

      addFundsForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        errorMessage.style.display = 'none';
        successMessage.style.display = 'none';

        const amount = parseFloat(amountInput.value);
        if (!amount || amount <= 0) {
          errorMessage.textContent = 'Please enter a valid amount.';
          errorMessage.style.display = 'block';
          console.error('Invalid amount:', amount);
          return;
        }

        try {
          const response = await fetch('/add-funds', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId, amount })
          });

          const result = await response.json();
          console.log('Add funds response:', result);

          if (!response.ok || !result.success) {
            errorMessage.textContent = result.message || 'Failed to initiate fund addition.';
            errorMessage.style.display = 'block';
            console.error('Add funds failed:', result);
            return;
          }

          // Open Razorpay checkout
          const options = {
            key: '<%= RAZORPAY_KEY_ID %>',
            amount: result.order.amount,
            currency: 'INR',
            name: 'My E-Commerce Site',
            description: 'Add Funds to Wallet',
            image: '/images/favicon.png',
            order_id: result.order.id,
            handler: async function (response) {
              console.log('Payment success:', response);
              try {
                const verifyResponse = await fetch('/verify-wallet-payment', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    razorpay_payment_id: response.razorpay_payment_id,
                    razorpay_order_id: response.razorpay_order_id,
                    razorpay_signature: response.razorpay_signature,
                    userId,
                    amount
                  })
                });

                const verifyResult = await verifyResponse.json();
                console.log('Payment verification response:', verifyResult);

                if (verifyResult.success) {
                  successMessage.textContent = `Successfully added ₹${amount.toFixed(2)} to your wallet!`;
                  successMessage.style.display = 'block';
                  setTimeout(() => location.reload(), 2000);
                } else {
                  errorMessage.textContent = verifyResult.message || 'Payment verification failed.';
                  errorMessage.style.display = 'block';
                }
              } catch (err) {
                console.error('Payment verification error:', err);
                errorMessage.textContent = 'Error verifying payment. Please try again.';
                errorMessage.style.display = 'block';
              }
            },
            prefill: {
              name: '<%= user?.name || "" %>',
              email: '<%= user?.email || "" %>',
              contact: '<%= user?.phone || "" %>'
            },
            theme: { color: '#28a745' },
            modal: {
              ondismiss: () => {
                console.log('Razorpay checkout dismissed');
                errorMessage.textContent = 'Payment cancelled. Please try again.';
                errorMessage.style.display = 'block';
              }
            }
          };

          const rzp = new Razorpay(options);
          rzp.on('payment.failed', (response) => {
            console.error('Payment failed:', response.error);
            errorMessage.textContent = response.error.description || 'Payment failed. Please try again.';
            errorMessage.style.display = 'block';
          });
          rzp.open();
        } catch (err) {
          console.error('Error initiating fund addition:', err);
          errorMessage.textContent = 'Error initiating payment. Please try again.';
          errorMessage.style.display = 'block';
        }
      });
    });
  </script>
</body>
<%- include('../partials/user/footer') %>