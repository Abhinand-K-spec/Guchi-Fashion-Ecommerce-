<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Address</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #e6e9ec;
      background: url('/img/background.svg') no-repeat;

    }

    .address-card {
      background: #fff;
      border-radius: 10px;
      padding: 25px 30px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      max-width: 150vh;
      margin: 50px auto;
    }

    h4 {
      font-weight: 600;
      margin-bottom: 20px;
      text-align: center;
      color: #333;
    }

    .form-control {
      padding: 8px 10px;
    }

    .row-gap {
      row-gap: 12px;
    }

    .btn-primary {
      padding: 8px 18px;
    }

    .alert {
      padding: 8px;
      margin-top: 5px;
      text-align: center;
      border-radius: 5px;
      font-size: 14px;
      display: none;
    }
    a{
      text-decoration: none;
    }
  </style>
</head>

<body>

  <%- include('../partials/user/header') %>

  <div class="address-card">
    <h4>Add New Address</h4>

    <div id="message" class="alert"></div>

    <form id="addAddressForm">

      <div class="row row-gap">
        <div class="col-6">
          <label class="form-label">Full Name</label>
          <input type="text" id="name" name="name" maxlength="20" class="form-control" />
        </div>

        <div class="col-6">
          <label class="form-label">Phone</label>
          <input type="tel" id="phone" name="phone" maxlength="10" class="form-control" />
        </div>

        <div class="col-12">
          <label class="form-label">Alternative Phone</label>
          <input type="tel" id="alternativePhone" name="alternativePhone" maxlength="10" class="form-control" />
        </div>

        <div class="col-6">
          <label class="form-label">Town</label>
          <input type="text" id="town" maxlength="20" name="town" class="form-control" />
        </div>

        <div class="col-6">
          <label class="form-label">City</label>
          <input type="text" id="city" maxlength="20" name="city" class="form-control" />
        </div>

        <div class="col-6">
          <label class="form-label">State</label>
          <input type="text" id="state" name="state" class="form-control" />
        </div>

        <div class="col-6">
          <label class="form-label">Post Code</label>
          <input type="text" id="postCode" name="postCode" maxlength="6" class="form-control" />
        </div>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <a href="/edit-profile" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Address</button>
      </div>

    </form>
  </div>
  <%- include('../partials/user/footer') %>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script>
    $(function () {
      $('#addAddressForm').on('submit', function (e) {
        e.preventDefault();

        const name = $('#name').val().trim();
        const phone = $('#phone').val().trim();
        const alt = $('#alternativePhone').val().trim();
        const town = $('#town').val().trim();
        const city = $('#city').val().trim();
        const state = $('#state').val().trim();
        const postCode = $('#postCode').val().trim();

        let msg = "";
        let valid = true;

        if (!/^[a-zA-Z\s]{3,20}$/.test(name)) msg = "Enter a valid name", valid = false;
        else if (!/^\d{10}$/.test(phone)) msg = "Enter valid phone", valid = false;
        else if (alt && (!/^\d{10}$/.test(alt) || alt === phone)) msg = "Invalid alternative phone", valid = false;
        else if (!/^[a-zA-Z\s]+$/.test(town)) msg = "Invalid town", valid = false;
        else if (!/^[a-zA-Z\s]+$/.test(city)) msg = "Invalid city", valid = false;
        else if (!/^[a-zA-Z\s]+$/.test(state)) msg = "Invalid state", valid = false;
        else if (!/^\d{6}$/.test(postCode)) msg = "Post code must be 6 digits", valid = false;

        if (!valid) {
          $('#message').removeClass("alert-success").addClass("alert-danger").text(msg).show();
          return;
        }

        $.ajax({
          type: 'POST',
          url: '/add-address',
          data: { name, phone, alternativePhone: alt, town, city, state, postCode },
          success: function () {
            $('#message').removeClass('alert-danger').addClass('alert-success').text("Address added successfully").show();
            setTimeout(() => window.location.href = '/checkout', 1200);
          },
          error: function (xhr) {
            const msg = xhr.responseJSON?.message || "Something went wrong";
            $('#message').removeClass('alert-success').addClass('alert-danger').text(msg).show();
          }
        });

      });
    });
  </script>

</body>
</html>
